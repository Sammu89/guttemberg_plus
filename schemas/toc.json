{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Table of Contents Block Theme Configuration",
  "version": "1.0.0",
  "description": "Complete theme and appearance configuration for Table of Contents blocks",
  "blockType": "toc",
  "blockName": "Table of Contents",
  "groups": {
    "headerColors": {
      "title": "Header Colors",
      "description": "Title text and background colors"
    },
    "contentColors": {
      "title": "Content Colors",
      "description": "Link colors, level colors, and numbering colors"
    },
    "border": {
      "title": "Border",
      "description": "Wrapper border styles, widths, radius, and shadow"
    },
    "typography": {
      "title": "Typography",
      "description": "Font settings for title and heading levels"
    },
    "layout": {
      "title": "Layout",
      "description": "Spacing, padding, and positioning"
    },
    "behavior": {
      "title": "Behavior",
      "description": "Non-themeable behavioral and structural settings"
    }
  },
  "attributes": {
    "tocId": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "TOC ID",
      "description": "Unique identifier for the table of contents",
      "themeable": false,
      "reason": "structural"
    },
    "showTitle": {
      "type": "boolean",
      "default": true,
      "group": "behavior",
      "label": "Show Title",
      "description": "Display the TOC title header",
      "themeable": false,
      "reason": "structural"
    },
    "titleText": {
      "type": "string",
      "default": "Table of Contents",
      "group": "behavior",
      "label": "Title Text",
      "description": "The title displayed above the table of contents",
      "themeable": false,
      "reason": "content"
    },
    "currentTheme": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Current Theme",
      "description": "Currently active theme name (empty = Default)",
      "themeable": false,
      "reason": "structural"
    },
    "filterMode": {
      "type": "string",
      "default": "include-all",
      "group": "behavior",
      "label": "Filter Mode",
      "description": "How headings are filtered for inclusion",
      "themeable": false,
      "reason": "behavioral",
      "options": [
        "include-all",
        "include-only",
        "exclude-only"
      ]
    },
    "includeLevels": {
      "type": "array",
      "default": [
        2,
        3,
        4,
        5,
        6
      ],
      "group": "behavior",
      "label": "Include Heading Levels",
      "description": "Which heading levels to include (H2-H6)",
      "themeable": false,
      "reason": "behavioral"
    },
    "includeClasses": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Include Classes",
      "description": "CSS classes to include in TOC",
      "themeable": false,
      "reason": "behavioral"
    },
    "excludeLevels": {
      "type": "array",
      "default": [],
      "group": "behavior",
      "label": "Exclude Heading Levels",
      "description": "Which heading levels to exclude",
      "themeable": false,
      "reason": "behavioral"
    },
    "excludeClasses": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Exclude Classes",
      "description": "CSS classes to exclude from TOC",
      "themeable": false,
      "reason": "behavioral"
    },
    "depthLimit": {
      "type": "number",
      "default": null,
      "group": "behavior",
      "label": "Depth Limit",
      "description": "Maximum nesting depth to display",
      "themeable": false,
      "reason": "behavioral"
    },
    "numberingStyle": {
      "type": "string",
      "default": "none",
      "group": "behavior",
      "label": "Numbering Style",
      "description": "Style of numbering for TOC items",
      "themeable": false,
      "reason": "behavioral",
      "options": [
        "none",
        "decimal",
        "decimal-leading-zero",
        "lower-alpha",
        "upper-alpha",
        "lower-roman",
        "upper-roman"
      ]
    },
    "isCollapsible": {
      "type": "boolean",
      "default": false,
      "group": "behavior",
      "label": "Collapsible",
      "description": "Allow the TOC to be collapsed/expanded",
      "themeable": false,
      "reason": "behavioral"
    },
    "initiallyCollapsed": {
      "type": "boolean",
      "default": false,
      "group": "behavior",
      "label": "Initially Collapsed",
      "description": "Start with TOC collapsed",
      "themeable": false,
      "reason": "behavioral"
    },
    "positionType": {
      "type": "string",
      "default": "block",
      "group": "behavior",
      "label": "Position Type",
      "description": "CSS positioning type",
      "themeable": false,
      "reason": "behavioral",
      "options": [
        "block",
        "sticky",
        "fixed"
      ]
    },
    "smoothScroll": {
      "type": "boolean",
      "default": true,
      "group": "behavior",
      "label": "Smooth Scroll",
      "description": "Enable smooth scrolling to headings",
      "themeable": false,
      "reason": "behavioral"
    },
    "scrollOffset": {
      "type": "number",
      "default": 0,
      "group": "behavior",
      "label": "Scroll Offset",
      "description": "Offset in pixels when scrolling to heading",
      "themeable": false,
      "reason": "behavioral"
    },
    "autoHighlight": {
      "type": "boolean",
      "default": true,
      "group": "behavior",
      "label": "Auto Highlight",
      "description": "Highlight current section in TOC",
      "themeable": false,
      "reason": "behavioral"
    },
    "clickBehavior": {
      "type": "string",
      "default": "navigate",
      "group": "behavior",
      "label": "Click Behavior",
      "description": "What happens when clicking a TOC item",
      "themeable": false,
      "reason": "behavioral",
      "options": [
        "navigate",
        "scroll"
      ]
    },
    "wrapperBackgroundColor": {
      "type": "string",
      "default": "#ffffff",
