      "themeable": false,
      "order": 10
    },
    "includeAccordions": {
      "type": "boolean",
      "default": true,
      "group": "blockOptions",
      "label": "Include Accordion Headings",
      "description": "Include headings from accordion blocks when they have a heading level set",
      "themeable": false,
      "reason": "structural",
      "order": 11
    },
    "includeTabs": {
      "type": "boolean",
      "default": true,
      "group": "blockOptions",
      "label": "Include Tab Headings",
