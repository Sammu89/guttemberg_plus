{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Table of Contents Block Theme Configuration",
  "version": "1.0.0",
  "description": "Complete theme and appearance configuration for Table of Contents blocks",
  "blockType": "toc",
  "blockName": "Table of Contents",
  "manualSyncRequired": {
    "description": "CSS properties are auto-generated from cssVar/cssSelector/cssProperty fields",
    "files": [
      "blocks/toc/src/_theme-generated.scss (AUTO-GENERATED - do not edit)"
    ],
    "instructions": "CSS variable declarations are automatically generated. Only edit style.scss for structural/layout CSS. To add CSS variables, add cssVar, cssSelector, and cssProperty to schema attributes."
  },
  "groups": {
    "headerColors": {
      "title": "Header Colors",
      "description": "Title text and background colors",
      "order": 2,
      "initialOpen": false      
    },
    "contentColors": {
      "title": "Content Colors",
      "description": "Link colors, level colors, and numbering colors",
      "order": 3,
      "initialOpen": false      
    },
    "blockBorders": {
      "title": "Block Borders",
      "description": "Wrapper borders, radius, and shadows",
      "order": 999,
      "initialOpen": false      
    },
    "typography": {
      "title": "Typography",
      "description": "Font settings for title and heading levels",
      "order": 4,
      "initialOpen": false      
    },
    "layout": {
      "title": "Layout",
      "description": "Spacing, padding, and positioning",
      "order": 8,
      "initialOpen": false      
    },
    "behavior": {
      "title": "Behavior",
      "description": "Non-themeable behavioral and structural settings",
      "order": 1,
      "initialOpen": true      
    }
  },
  "attributes": {
    "tocId": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "TOC ID",
      "description": "Unique identifier for the table of contents",
      "themeable": false,
      "reason": "structural",
      "order": 1      
    },
    "showTitle": {
      "type": "boolean",
      "default": true,
      "group": "behavior",
      "label": "Show Title",
      "description": "Display the TOC title header",
      "themeable": false,
      "reason": "structural",
      "order": 2      
    },
    "titleText": {
      "type": "string",
      "default": "Table of Contents",
      "group": "behavior",
      "label": "Title Text",
      "description": "The title displayed above the table of contents",
      "themeable": false,
      "reason": "content",
      "order": 3      
    },
    "currentTheme": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Current Theme",
      "description": "Currently active theme name (empty = Default)",
      "themeable": false,
      "reason": "structural",
      "order": 4      
    },
    "filterMode": {
      "type": "string",
      "default": "include-all",
      "group": "behavior",
      "label": "Filter Mode",
      "description": "How headings are filtered for inclusion",
      "themeable": false,
      
      "options": [
        "include-all",
        "include-only",
        "exclude-only"
      ],
      "order": 5      
    },
    "includeLevels": {
      "type": "array",
      "default": [
        2,
        3,
        4,
        5,
        6
      ],
      "group": "behavior",
      "label": "Include Heading Levels",
      "description": "Which heading levels to include (H2-H6)",
      "themeable": false,
      
      "order": 6      
    },
    "includeClasses": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Include Classes",
      "description": "CSS classes to include in TOC",
      "themeable": false,
      
      "order": 7      
    },
    "excludeLevels": {
      "type": "array",
      "default": [],
      "group": "behavior",
      "label": "Exclude Heading Levels",
      "description": "Which heading levels to exclude",
      "themeable": false,
      
      "order": 8      
    },
    "excludeClasses": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Exclude Classes",
      "description": "CSS classes to exclude from TOC",
      "themeable": false,
      
      "order": 9      
    },
    "depthLimit": {
      "type": "number",
      "default": null,
      "group": "behavior",
      "label": "Depth Limit",
      "description": "Maximum nesting depth to display",
      "themeable": false,
      
      "order": 10      
    },
    "numberingStyle": {
      "type": "string",
      "default": "none",
      "group": "behavior",
      "label": "Numbering Style",
      "description": "Style of numbering for TOC items",
      "themeable": false,
      
      "options": [
        "none",
        "decimal",
        "decimal-leading-zero",
        "lower-alpha",
        "upper-alpha",
        "lower-roman",
        "upper-roman"
