{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tabs Block Theme Configuration",
  "version": "2.0.0",
  "description": "Complete theme and appearance configuration for Tabs blocks",
  "blockType": "tabs",
  "blockName": "Tabs",
  "groups": {
    "behavior": {
      "title": "Behavior",
      "description": "Non-themeable behavioral and structural settings"
    },
    "titleColors": {
      "title": "Title Colors",
      "description": "All title/tab button colors and tab list background"
    },
    "titleTypography": {
      "title": "Title Typography",
      "description": "All title/tab button typography and tab list alignment"
    },
    "titleBorders": {
      "title": "Title Borders",
      "description": "All tab button borders, shadows, radius, and padding"
    },
    "divider": {
      "title": "Divider",
      "description": "Divider line between tabs navigation and content"
    },
    "content": {
      "title": "Content",
      "description": "All panel colors and borders"
    },
    "icon": {
      "title": "Icon",
      "description": "Icon appearance and styling"
    },
    "layout": {
      "title": "Layout",
      "description": "Spacing, gaps, and sizing (unused in UI - for future spacing controls)"
    }
  },
  "attributes": {
    "uniqueId": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Unique ID",
      "description": "Auto-generated unique block identifier",
      "themeable": false,
      "reason": "structural"
    },
    "blockId": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Block ID",
      "description": "Block-specific identification",
      "themeable": false,
      "reason": "structural"
    },
    "currentTheme": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Current Theme",
      "description": "Currently active theme name (empty = Default)",
      "themeable": false,
      "reason": "structural"
    },
    "tabs": {
      "type": "array",
      "default": [
        {
          "id": "",
          "title": "Tab 1",
          "content": "",
          "isDisabled": false
        },
        {
          "id": "",
          "title": "Tab 2",
          "content": "",
          "isDisabled": false
        }
      ],
      "group": "behavior",
      "label": "Tabs",
      "description": "Array of tab items with title, content, and state",
      "themeable": false,
      "reason": "content"
    },
    "orientation": {
      "type": "string",
      "default": "horizontal",
      "group": "behavior",
      "label": "Orientation",
      "description": "Tab layout orientation",
      "themeable": false,
      "reason": "behavioral",
      "control": "SelectControl",
      "options": ["horizontal", "vertical"]
    },
    "activationMode": {
      "type": "string",
      "default": "auto",
      "group": "behavior",
      "label": "Activation Mode",
      "description": "How tabs are activated (auto = focus, manual = click)",
      "themeable": false,
      "reason": "behavioral",
      "control": "SelectControl",
      "options": ["auto", "manual"]
    },
    "responsiveBreakpoint": {
      "type": "number",
      "default": 768,
      "group": "behavior",
      "label": "Responsive Breakpoint",
      "description": "Width in pixels below which to show accordion fallback",
      "themeable": false,
      "reason": "behavioral"
    },
    "headingLevel": {
      "type": "string",
      "default": "none",
      "group": "behavior",
      "label": "Heading Level",
      "description": "Semantic HTML heading level (none, h1-h6)",
      "themeable": false,
      "reason": "structural",
      "control": "SelectControl",
      "options": ["none", "h1", "h2", "h3", "h4", "h5", "h6"]
    },
    "title": {
      "type": "string",
      "default": "Tabs",
      "group": "behavior",
      "label": "Title",
      "description": "Block title (for accessibility)",
      "themeable": false,
      "reason": "content"
    },
    "verticalTabButtonTextAlign": {
      "type": "string",
      "default": "left",
      "group": "behavior",
      "label": "Vertical Tab Alignment",
      "description": "Text alignment for vertical tabs",
      "themeable": false,
      "reason": "behavioral",
      "control": "SelectControl",
      "options": ["left", "center", "right"]
    },
    "showIcon": {
      "type": "boolean",
      "default": true,
      "cssVar": "tab-show-icon",
      "group": "icon",
      "label": "Show Icon",
      "description": "Display icons in tab buttons",
      "themeable": true,
      "control": "ToggleControl"
    },
    "iconPosition": {
      "type": "string",
      "default": "right",
      "group": "icon",
      "label": "Icon Position",
      "description": "Position of icon relative to text",
      "themeable": true,
      "control": "SelectControl",
      "options": ["left", "right"]
    },
    "iconColor": {
      "type": "string",
      "default": "#666666",
      "cssVar": "tab-icon-color",
      "group": "icon",
      "label": "Icon Color",
      "description": "Color of the tab icon",
      "themeable": true,
      "control": "ColorPicker"
    },
    "iconSize": {
      "type": "number",
      "default": "16px",
      "cssVar": "tab-icon-size",
      "group": "icon",
      "label": "Icon Size",
      "description": "Size of the icon in pixels",
      "themeable": true,
      "control": "RangeControl",
      "min": 8,
      "max": 48,
      "unit": "px"
    },
    "iconTypeClosed": {
      "type": "string",
      "default": "â–¾",
      "group": "icon",
      "label": "Closed Icon",
      "description": "Icon when tab is closed (char or image URL)",
      "themeable": true,
      "control": "IconPicker"
    },
    "iconTypeOpen": {
      "type": "string",
      "default": "none",
      "group": "icon",
      "label": "Open Icon",
      "description": "Icon when tab is open (none = use closed icon with rotation)",
      "themeable": true,
      "control": "IconPicker"
    },
    "iconRotation": {
      "type": "number",
      "default": "180deg",
      "cssVar": "tab-icon-rotation",
      "group": "icon",
      "label": "Icon Rotation",
      "description": "Rotation angle when open (degrees)",
      "themeable": true,
      "control": "RangeControl",
      "min": -360,
      "max": 360,
      "unit": "deg"
    },
    "tabButtonColor": {
      "type": "string",
      "default": "#666666",
      "cssVar": "tab-button-color",
      "group": "titleColors",
      "label": "Tab Button Color",
      "description": "Text color for inactive tab buttons",
      "themeable": true,
      "control": "ColorPicker"
    },
    "tabButtonBackgroundColor": {
      "type": "string",
      "default": "transparent",
      "cssVar": "tab-button-bg",
      "group": "titleColors",
      "label": "Tab Button Background",
      "description": "Background color for inactive tab buttons",
      "themeable": true,
      "control": "ColorPicker"
    },
    "tabButtonHoverColor": {
      "type": "string",
      "default": "#333333",
      "cssVar": "tab-button-hover-color",
      "group": "titleColors",
      "label": "Tab Button Hover Color",
      "description": "Text color when hovering over tab",
      "themeable": true,
      "control": "ColorPicker"
    },
    "tabButtonHoverBackgroundColor": {
      "type": "string",
      "default": "#e8e8e8",
      "cssVar": "tab-button-hover-bg",
      "group": "titleColors",
      "label": "Tab Button Hover Background",
      "description": "Background color when hovering over tab",
      "themeable": true,
      "control": "ColorPicker"
    },
    "tabButtonActiveColor": {
      "type": "string",
      "default": "#000000",
      "cssVar": "tab-button-active-color",
      "group": "titleColors",
      "label": "Tab Button Active Color",
      "description": "Text color for active/selected tab",
      "themeable": true,
      "control": "ColorPicker"
    },
    "tabButtonActiveBackgroundColor": {
      "type": "string",
      "default": "#ffffff",
      "cssVar": "tab-button-active-bg",
      "group": "titleColors",
      "label": "Tab Button Active Background",
      "description": "Background color for active/selected tab",
      "themeable": true,
      "control": "ColorPicker"
    },
    "tabButtonActiveBorderColor": {
      "type": "string",
      "default": "#dddddd",
      "cssVar": "tab-button-active-border-color",
      "group": "titleColors",
      "label": "Tab Button Active Border Color",
      "description": "Border color for the active tab",
      "themeable": true,
      "control": "ColorPicker"
    },
    "tabButtonActiveBorderBottomColor": {
      "type": "string",
      "default": "transparent",
      "cssVar": "tab-button-active-border-bottom-color",
      "group": "titleColors",
      "label": "Tab Button Active Border Bottom",
      "description": "Bottom border color for active tab (creates connected effect)",
      "themeable": true,
      "control": "ColorPicker"
    },
    "tabButtonBorderColor": {
      "type": "string",
      "default": null,
      "cssVar": "tab-button-border-color",
      "group": "titleBorders",
      "label": "Tab Button Border Color",
      "description": "Border color for inactive tab buttons",
      "themeable": true,
      "control": "ColorPicker"
    },
    "tabButtonBorderWidth": {
      "type": "number",
      "default": null,
      "cssVar": "tab-button-border-width",
      "group": "titleBorders",
      "label": "Tab Button Border Width",
      "description": "Border width for tab buttons",
      "themeable": true,
      "control": "RangeControl",
      "min": 0,
      "max": 10,
      "unit": "px"
    },
    "tabButtonBorderStyle": {
      "type": "string",
      "default": null,
      "cssVar": "tab-button-border-style",
      "group": "titleBorders",
      "label": "Tab Button Border Style",
      "description": "Border style for tab buttons",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        { "label": "None", "value": "none" },
        { "label": "Solid", "value": "solid" },
        { "label": "Dashed", "value": "dashed" },
        { "label": "Dotted", "value": "dotted" },
        { "label": "Double", "value": "double" }
      ]
    },
    "tabButtonBorderRadius": {
      "type": "object",
      "default": {
        "topLeft": 4,
        "topRight": 4,
        "bottomRight": 0,
        "bottomLeft": 0
      },
      "cssVar": "tab-button-border-radius",
      "group": "titleBorders",
      "label": "Tab Button Border Radius",
      "description": "Corner radius for tab buttons",
      "themeable": true,
      "unit": "px"
    },
    "tabButtonShadow": {
      "type": "string",
      "default": "none",
      "cssVar": "tab-button-shadow",
      "group": "titleBorders",
      "label": "Tab Button Shadow",
      "description": "Box shadow for tab buttons",
      "themeable": true,
      "control": "TextControl"
    },
    "tabButtonShadowHover": {
      "type": "string",
      "default": "none",
      "cssVar": "tab-button-shadow-hover",
      "group": "titleBorders",
      "label": "Tab Button Shadow Hover",
      "description": "Box shadow for tab buttons on hover",
      "themeable": true,
      "control": "TextControl"
    },
    "tabButtonFontSize": {
      "type": "number",
      "default": 16,
      "cssVar": "tab-button-font-size",
      "group": "titleTypography",
      "label": "Tab Button Font Size",
      "description": "Font size for tab buttons",
      "themeable": true,
      "control": "RangeControl",
      "min": 10,
      "max": 36,
      "unit": "px"
    },
    "tabButtonFontWeight": {
      "type": "string",
      "default": "500",
      "cssVar": "tab-button-font-weight",
      "group": "titleTypography",
      "label": "Tab Button Font Weight",
      "description": "Font weight for tab buttons",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        { "label": "100", "value": "100" },
        { "label": "200", "value": "200" },
        { "label": "300", "value": "300" },
        { "label": "400", "value": "400" },
        { "label": "500", "value": "500" },
        { "label": "600", "value": "600" },
        { "label": "700", "value": "700" },
        { "label": "800", "value": "800" },
        { "label": "900", "value": "900" },
        { "label": "Normal", "value": "normal" },
        { "label": "Bold", "value": "bold" }
      ]
    },
    "tabButtonFontStyle": {
      "type": "string",
      "default": "normal",
      "cssVar": "tab-button-font-style",
      "group": "titleTypography",
      "label": "Tab Button Font Style",
      "description": "Font style for tab buttons",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        { "label": "Normal", "value": "normal" },
        { "label": "Italic", "value": "italic" },
        { "label": "Oblique", "value": "oblique" }
      ]
    },
    "tabButtonTextTransform": {
      "type": "string",
      "default": "none",
      "cssVar": "tab-button-text-transform",
      "group": "titleTypography",
      "label": "Tab Button Text Transform",
      "description": "Text transformation for tab buttons",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        { "label": "None", "value": "none" },
        { "label": "Uppercase", "value": "uppercase" },
        { "label": "Lowercase", "value": "lowercase" },
        { "label": "Capitalize", "value": "capitalize" }
      ]
    },
    "tabButtonTextDecoration": {
      "type": "string",
      "default": "none",
      "cssVar": "tab-button-text-decoration",
      "group": "titleTypography",
      "label": "Tab Button Text Decoration",
      "description": "Text decoration for tab buttons",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        { "label": "None", "value": "none" },
        { "label": "Underline", "value": "underline" },
        { "label": "Overline", "value": "overline" },
        { "label": "Line Through", "value": "line-through" }
      ]
    },
    "tabButtonTextAlign": {
      "type": "string",
      "default": "center",
      "cssVar": "tab-button-text-align",
      "group": "titleTypography",
      "label": "Tab Button Text Alignment",
      "description": "Text alignment for tab buttons",
      "themeable": true,
      "control": "SelectControl",
      "options": ["left", "center", "right"]
    },
    "tabButtonPadding": {
      "type": "object",
      "default": {
        "top": 12,
        "right": 24,
        "bottom": 12,
        "left": 24
      },
      "cssVar": "tab-button-padding",
      "group": "titleBorders",
      "label": "Tab Button Padding",
      "description": "Padding inside tab buttons",
      "themeable": true,
      "unit": "px"
    },
    "tabListBackgroundColor": {
      "type": "string",
      "default": "#f5f5f5",
      "cssVar": "tab-list-bg",
      "group": "titleColors",
      "label": "Tab List Background",
      "description": "Background color for the tab navigation bar",
      "themeable": true,
      "control": "ColorPicker"
    },
    "tabListAlignment": {
      "type": "string",
      "default": "left",
      "cssVar": "tab-list-align",
      "group": "titleTypography",
      "label": "Tab List Alignment",
      "description": "Horizontal alignment of tabs",
      "themeable": true,
      "control": "SelectControl",
      "options": ["left", "center", "right"]
    },
    "panelColor": {
      "type": "string",
      "default": "#333333",
      "cssVar": "tab-panel-color",
      "group": "content",
      "label": "Panel Text Color",
      "description": "Text color for tab panel content",
      "themeable": true,
      "control": "ColorPicker"
    },
    "panelBackgroundColor": {
      "type": "string",
      "default": "#ffffff",
      "cssVar": "tab-panel-bg",
      "group": "content",
      "label": "Panel Background",
      "description": "Background color for tab panels",
      "themeable": true,
      "control": "ColorPicker"
    },
    "panelBorderColor": {
      "type": "string",
      "default": "#dddddd",
      "cssVar": "tab-panel-border-color",
      "group": "content",
      "label": "Panel Border Color",
      "description": "Border color for tab panels",
      "themeable": true,
      "control": "ColorPicker"
    },
    "panelBorderWidth": {
      "type": "number",
      "default": 1,
      "cssVar": "tab-panel-border-width",
      "group": "content",
      "label": "Panel Border Width",
      "description": "Border width for tab panels",
      "themeable": true,
      "control": "RangeControl",
      "min": 0,
      "max": 10,
      "unit": "px"
    },
    "panelBorderStyle": {
      "type": "string",
      "default": "solid",
      "cssVar": "tab-panel-border-style",
      "group": "content",
      "label": "Panel Border Style",
      "description": "Border style for tab panels",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        { "label": "None", "value": "none" },
        { "label": "Solid", "value": "solid" },
        { "label": "Dashed", "value": "dashed" },
        { "label": "Dotted", "value": "dotted" },
        { "label": "Double", "value": "double" }
      ]
    },
    "panelBorderRadius": {
      "type": "object",
      "default": {
        "topLeft": 0,
        "topRight": 0,
        "bottomRight": 0,
        "bottomLeft": 0
      },
      "cssVar": "tab-panel-border-radius",
      "group": "content",
      "label": "Panel Border Radius",
      "description": "Corner radius for tab panels",
      "themeable": true,
      "unit": "px"
    },
    "panelShadow": {
      "type": "string",
      "default": "none",
      "cssVar": "tab-panel-shadow",
      "group": "content",
      "label": "Panel Shadow",
      "description": "Box shadow for tab panels",
      "themeable": true,
      "control": "TextControl"
    },
    "dividerLineColor": {
      "type": "string",
      "default": null,
      "cssVar": "divider-color",
      "group": "divider",
      "label": "Divider Line Color",
      "description": "Color of divider line between tabs and panel",
      "themeable": true,
      "control": "ColorPicker"
    },
    "dividerLineWidth": {
      "type": "number",
      "default": null,
      "cssVar": "divider-width",
      "group": "divider",
      "label": "Divider Line Width",
      "description": "Width/thickness of divider line",
      "themeable": true,
      "control": "RangeControl",
      "min": 0,
      "max": 10,
      "unit": "px"
    },
    "dividerLineStyle": {
      "type": "string",
      "default": null,
      "cssVar": "divider-style",
      "group": "divider",
      "label": "Divider Line Style",
      "description": "Style of divider line between tabs and panel",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        { "label": "None", "value": "none" },
        { "label": "Solid", "value": "solid" },
        { "label": "Dashed", "value": "dashed" },
        { "label": "Dotted", "value": "dotted" },
        { "label": "Double", "value": "double" }
      ]
    },
    "iconColor": {
      "type": "string",
      "default": "inherit",
      "cssVar": "icon-color",
      "group": "icon",
      "label": "Icon Color",
      "description": "Color of tab icons",
      "themeable": true,
      "control": "ColorPicker"
    },
    "iconSize": {
      "type": "number",
      "default": 18,
      "cssVar": "icon-size",
      "group": "icon",
      "label": "Icon Size",
      "description": "Size of tab icons in pixels",
      "themeable": true,
      "control": "RangeControl",
      "min": 10,
      "max": 36,
      "unit": "px"
    },
    "iconRotation": {
      "type": "number",
      "default": 180,
      "cssVar": "icon-rotation",
      "group": "icon",
      "label": "Icon Rotation",
      "description": "Rotation angle when open (degrees)",
      "themeable": true,
      "control": "RangeControl",
      "min": -360,
      "max": 360,
      "unit": "deg"
    },
    "verticalTabListWidth": {
      "type": "number",
      "default": 200,
      "cssVar": "vertical-tab-list-width",
      "group": "layout",
      "label": "Vertical Tab List Width",
      "description": "Width of tab list in vertical orientation",
      "themeable": true,
      "control": "RangeControl",
      "min": 100,
      "max": 400,
      "unit": "px"
    },
    "itemSpacing": {
      "type": "number",
      "default": null,
      "cssVar": "tabs-item-spacing",
      "group": "layout",
      "label": "Item Spacing",
      "description": "General spacing between items",
      "themeable": true,
      "control": "RangeControl",
      "min": 0,
      "max": 50,
      "unit": "px"
    }
  }
}
