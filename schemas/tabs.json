    "accordionId": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Accordion ID",
      "description": "ID for accordion fallback mode",
      "themeable": false,
      "reason": "structural"
    },
    "titleColor": {
      "type": "string",
      "default": "#666666",
      "cssVar": "tab-button-color",
      "group": "headerColors",
      "label": "Tab Button Color",
      "description": "Text color for inactive tab buttons",
