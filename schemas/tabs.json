{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tabs Block Theme Configuration",
  "version": "2.0.0",
  "description": "Complete theme and appearance configuration for Tabs blocks",
  "blockType": "tabs",
  "blockName": "Tabs",
  "manualSyncRequired": {
    "description": "CSS properties are auto-generated from cssVar/cssSelector/cssProperty fields",
    "files": [
      "blocks/tabs/src/_theme-generated.scss (AUTO-GENERATED - do not edit)"
    ],
    "instructions": "CSS variable declarations are automatically generated. Only edit style.scss for structural/layout CSS. To add CSS variables, add cssVar, cssSelector, and cssProperty to schema attributes."
  },
  "groups": {
    "behaviour": {
      "title": "Behaviour",
      "description": "Behavioral and functional settings that control how tabs work",
      "order": 1,
      "initialOpen": true      
    },
    "borders": {
      "title": "Borders",
      "description": "Main tabs wrapper borders and radius",
      "order": 2,
      "initialOpen": false      
    },
    "buttonColors": {
      "title": "Button Colors",
      "description": "Tab button text and background colors for inactive state",
      "order": 3,
      "initialOpen": false      
    },
    "buttonHover": {
      "title": "Button Hover",
      "description": "Tab button colors when hovering",
      "order": 4,
      "initialOpen": false      
    },
    "buttonActive": {
      "title": "Button Active",
      "description": "Tab button colors for active/selected state",
      "order": 5,
      "initialOpen": false      
    },
    "buttonBorders": {
      "title": "Button Borders",
      "description": "Tab button full border around the button element",
      "order": 6,
      "initialOpen": false      
    },
    "specialBorders": {
      "title": "Special Borders",
      "description": "Individual button borders and navigation bar divider borders adjacent to content",
      "order": 7,
      "initialOpen": false      
    },
    "buttonTypography": {
      "title": "Button Typography",
      "description": "Tab button typography and alignment",
      "order": 8,
      "initialOpen": false      
    },
    "navigationBar": {
      "title": "Nav Bar",
      "description": "Navigation bar background and alignment",
      "order": 9,
      "initialOpen": false      
    },
    "content": {
      "title": "Content",
      "description": "Content panel colors, borders, and radius",
      "order": 11,
      "initialOpen": false      
    },
    "icon": {
      "title": "Icon",
      "description": "Icon appearance and styling",
      "order": 12,
      "initialOpen": false      
    }
  },
