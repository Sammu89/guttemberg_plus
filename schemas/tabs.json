{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tabs Block Theme Configuration",
  "version": "2.0.0",
  "description": "Complete theme and appearance configuration for Tabs blocks",
  "blockType": "tabs",
  "blockName": "Tabs",
  "manualSyncRequired": {
    "description": "CSS properties are auto-generated from cssVar/cssSelector/cssProperty fields",
    "files": [
      "blocks/tabs/src/_theme-generated.scss (AUTO-GENERATED - do not edit)"
    ],
    "instructions": "CSS variable declarations are automatically generated. Only edit style.scss for structural/layout CSS. To add CSS variables, add cssVar, cssSelector, and cssProperty to schema attributes."
  },
  "groups": {
    "behaviour": {
      "title": "Behaviour",
      "description": "Behavioral and functional settings that control how tabs work",
      "order": 1,
      "initialOpen": true
    },
    "externalBorders": {
      "title": "External Borders",
      "description": "Main tabs wrapper borders and radius",
      "order": 2,
      "initialOpen": false
    },
    "buttonColors": {
      "title": "Button Colors",
      "description": "Tab button text and background colors for all states",
      "order": 3,
      "initialOpen": false
    },
    "buttonBorders": {
      "title": "Button Borders",
      "description": "Tab button borders including enhanced border adjacent to content",
      "order": 4,
      "initialOpen": false
    },
    "buttonTypography": {
      "title": "Button Typography",
      "description": "Tab button typography and alignment",
      "order": 5,
      "initialOpen": false
    },
    "tabList": {
      "title": "Tab Row",
      "description": "Tab row background, alignment, and border",
      "order": 6,
      "initialOpen": false
    },
    "content": {
      "title": "Content",
      "description": "Content panel colors, borders, and radius",
      "order": 7,
      "initialOpen": false
    },
    "icon": {
      "title": "Icon",
      "description": "Icon appearance and styling",
      "order": 8,
      "initialOpen": false
    }
  },
  "attributes": {
    "uniqueId": {
      "type": "string",
      "default": "",
      "group": "behaviour",
      "label": "Unique ID",
      "description": "Auto-generated unique block identifier",
      "themeable": false,
      "reason": "structural",
      "order": 1      
    },
    "blockId": {
      "type": "string",
      "default": "",
      "group": "behaviour",
      "label": "Block ID",
      "description": "Block-specific identification",
      "themeable": false,
      "reason": "structural",
      "order": 2      
    },
    "currentTheme": {
      "type": "string",
      "default": "",
      "group": "behaviour",
      "label": "Current Theme",
      "description": "Currently active theme name (empty = Default)",
      "themeable": false,
      "reason": "structural",
      "order": 3      
    },
    "tabs": {
      "type": "array",
      "default": [
        {
          "id": "",
          "title": "Tab 1",
          "content": "",
          "isDisabled": false
        },
        {
          "id": "",
          "title": "Tab 2",
          "content": "",
          "isDisabled": false
        }
      ],
      "group": "behaviour",
      "label": "Tabs",
      "description": "Array of tab items with title, content, and state",
      "themeable": false,
      "reason": "content",
      "order": 4
    },
    "tabsData": {
      "type": "array",
      "default": [],
      "group": "behaviour",
      "label": "Tabs Data",
      "description": "Synchronized tab button data for server-side rendering",
      "themeable": false,
      "reason": "structural",
      "order": 4.5
    },
    "orientation": {
      "type": "string",
      "default": "horizontal",
      "group": "behaviour",
      "label": "Orientation",
      "description": "Tab layout orientation",
      "themeable": false,
      "reason": "structural",
      "control": "SelectControl",
      "options": [
        { "label": "Horizontal", "value": "horizontal" },
        { "label": "Vertical Left", "value": "vertical-left" },
        { "label": "Vertical Right", "value": "vertical-right" }
      ],
      "order": 5
    },
    "activationMode": {
      "type": "string",
      "default": "auto",
      "group": "behaviour",
      "label": "Activation Mode",
      "description": "How tabs are activated (auto = focus, manual = click)",
      "themeable": false,
      "reason": "generalal",
      "control": "SelectControl",
      "options": [
        "auto",
        "manual"
      ],
      "order": 6      
    },
    "headingLevel": {
      "type": "string",
      "default": "none",
      "group": "behaviour",
      "label": "Heading Level",
      "description": "Semantic HTML heading level (none, h1-h6)",
      "themeable": false,
      "reason": "structural",
      "control": "SelectControl",
      "options": [
        "none",
        "h1",
        "h2",
        "h3",
        "h4",
        "h5",
        "h6"
      ],
      "order": 8      
    },
    "title": {
      "type": "string",
      "default": "Tabs",
