{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tabs Block Theme Configuration",
  "version": "1.0.0",
  "description": "Complete theme and appearance configuration for Tabs blocks",
  "blockType": "tabs",
  "blockName": "Tabs",

  "groups": {
    "colors": {
      "title": "Colors",
      "description": "Text and background colors for tabs, panels, and states"
    },
    "typography": {
      "title": "Typography",
      "description": "Font settings for tab buttons and panel content"
    },
    "borders": {
      "title": "Borders",
      "description": "Border styles, widths, radius, and shadow"
    },
    "layout": {
      "title": "Layout",
      "description": "Spacing, padding, sizing, and alignment"
    },
    "icons": {
      "title": "Icons",
      "description": "Icon appearance settings"
    },
    "behavior": {
      "title": "Behavior",
      "description": "Non-themeable behavioral and structural settings"
    }
  },

  "attributes": {
    "uniqueId": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Unique ID",
      "description": "Auto-generated unique block identifier",
      "themeable": false,
      "reason": "structural"
    },
    "blockId": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Block ID",
      "description": "Block-specific identification",
      "themeable": false,
      "reason": "structural"
    },
    "currentTheme": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Current Theme",
      "description": "Currently active theme name (empty = Default)",
      "themeable": false,
      "reason": "structural"
    },
    "tabs": {
      "type": "array",
      "default": [
        {
          "id": "",
          "title": "Tab 1",
          "content": "",
          "isDisabled": false
        },
        {
          "id": "",
          "title": "Tab 2",
          "content": "",
          "isDisabled": false
        }
      ],
      "group": "behavior",
      "label": "Tabs",
      "description": "Array of tab items with title, content, and state",
      "themeable": false,
      "reason": "content"
    },
    "orientation": {
      "type": "string",
      "default": "horizontal",
      "group": "behavior",
      "label": "Orientation",
      "description": "Tab layout orientation",
      "themeable": false,
      "reason": "behavioral",
      "options": ["horizontal", "vertical"]
    },
    "activationMode": {
      "type": "string",
      "default": "auto",
      "group": "behavior",
      "label": "Activation Mode",
      "description": "How tabs are activated (auto = focus, manual = click)",
      "themeable": false,
      "reason": "behavioral",
      "options": ["auto", "manual"]
    },
    "currentTab": {
      "type": "number",
      "default": 0,
      "group": "behavior",
      "label": "Current Tab",
      "description": "Index of currently active tab (0-based)",
      "themeable": false,
      "reason": "behavioral"
    },
    "responsiveBreakpoint": {
      "type": "number",
      "default": 768,
      "group": "behavior",
      "label": "Responsive Breakpoint",
      "description": "Width in pixels below which to show accordion fallback",
      "themeable": false,
      "reason": "behavioral"
    },
    "enableResponsiveFallback": {
      "type": "boolean",
      "default": true,
      "group": "behavior",
      "label": "Enable Responsive Fallback",
      "description": "Convert to accordion on small screens",
      "themeable": false,
      "reason": "behavioral"
    },
    "headingLevel": {
      "type": "string",
      "default": "none",
      "group": "behavior",
      "label": "Heading Level",
      "description": "Semantic HTML heading level (none, h1-h6)",
      "themeable": false,
      "reason": "behavioral",
      "options": ["none", "h1", "h2", "h3", "h4", "h5", "h6"]
    },
    "useHeadingStyles": {
      "type": "boolean",
      "default": false,
      "group": "behavior",
      "label": "Use Heading Styles",
      "description": "Apply default heading styles",
      "themeable": false,
      "reason": "behavioral"
    },
    "initiallyOpen": {
      "type": "boolean",
      "default": false,
      "group": "behavior",
      "label": "Initially Open",
      "description": "Whether first tab is open on load",
      "themeable": false,
      "reason": "behavioral"
    },
    "title": {
      "type": "string",
      "default": "Accordion Title",
      "group": "behavior",
      "label": "Title",
      "description": "Block title (for accessibility)",
      "themeable": false,
      "reason": "content"
    },
    "content": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Content",
      "description": "Block content",
      "themeable": false,
      "reason": "content"
    },
    "accordionId": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Accordion ID",
      "description": "ID for accordion fallback mode",
      "themeable": false,
      "reason": "structural"
    },

    "titleColor": {
      "type": "string",
      "default": "#666666",
      "cssVar": "tab-button-color",
      "cssDefault": "--tab-button-color: #666666;",
      "group": "colors",
      "label": "Tab Button Color",
      "description": "Text color for inactive tab buttons",
      "themeable": true,
      "control": "ColorPicker"
    },
    "titleBackgroundColor": {
      "type": "string",
      "default": "transparent",
