{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tabs Block Theme Configuration",
  "version": "2.0.0",
  "description": "Complete theme and appearance configuration for Tabs blocks",
  "blockType": "tabs",
  "blockName": "Tabs",
  "groups": {
    "behavior": {
      "title": "Behavior",
      "description": "Non-themeable behavioral and structural settings"
    },
    "titleColors": {
      "title": "Title Colors",
      "description": "All title/tab button colors and tab list background"
    },
    "titleTypography": {
      "title": "Title Typography",
      "description": "All title/tab button typography and tab list alignment"
    },
    "borders": {
      "title": "Borders",
      "description": "Main tabs wrapper borders and radius"
    },
    "buttonBorders": {
      "title": "Button Borders",
      "description": "Tab button borders, radius, and shadows"
    },
    "dividerLine": {
      "title": "Divider Line",
      "description": "Divider line between tabs navigation and content"
    },
    "icon": {
      "title": "Icon",
      "description": "Icon appearance and styling"
    },
    "layout": {
      "title": "Layout",
      "description": "Spacing, gaps, and sizing (unused in UI - for future spacing controls)"
    }
  },
  "attributes": {
    "uniqueId": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Unique ID",
      "description": "Auto-generated unique block identifier",
      "themeable": false,
      "reason": "structural"
    },
    "blockId": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Block ID",
      "description": "Block-specific identification",
      "themeable": false,
      "reason": "structural"
    },
    "currentTheme": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Current Theme",
      "description": "Currently active theme name (empty = Default)",
      "themeable": false,
      "reason": "structural"
    },
    "tabs": {
      "type": "array",
      "default": [
        {
          "id": "",
          "title": "Tab 1",
          "content": "",
          "isDisabled": false
        },
        {
          "id": "",
          "title": "Tab 2",
          "content": "",
          "isDisabled": false
        }
      ],
      "group": "behavior",
      "label": "Tabs",
      "description": "Array of tab items with title, content, and state",
      "themeable": false,
      "reason": "content"
    },
    "orientation": {
      "type": "string",
      "default": "horizontal",
      "group": "behavior",
      "label": "Orientation",
      "description": "Tab layout orientation",
      "themeable": false,
      "reason": "behavioral",
      "control": "SelectControl",
      "options": ["horizontal", "vertical"]
    },
    "activationMode": {
      "type": "string",
      "default": "auto",
      "group": "behavior",
      "label": "Activation Mode",
      "description": "How tabs are activated (auto = focus, manual = click)",
      "themeable": false,
      "reason": "behavioral",
      "control": "SelectControl",
      "options": ["auto", "manual"]
    },
    "responsiveBreakpoint": {
      "type": "number",
      "default": 768,
      "group": "behavior",
      "label": "Responsive Breakpoint",
      "description": "Width in pixels below which to show accordion fallback",
      "themeable": false,
      "reason": "behavioral"
    },
    "headingLevel": {
      "type": "string",
      "default": "none",
      "group": "behavior",
      "label": "Heading Level",
      "description": "Semantic HTML heading level (none, h1-h6)",
      "themeable": false,
      "reason": "structural",
      "control": "SelectControl",
      "options": ["none", "h1", "h2", "h3", "h4", "h5", "h6"]
    },
    "title": {
      "type": "string",
      "default": "Tabs",
      "group": "behavior",
      "label": "Title",
      "description": "Block title (for accessibility)",
      "themeable": false,
      "reason": "content"
    },
    "verticalTabButtonTextAlign": {
      "type": "string",
      "default": "left",
      "group": "behavior",
      "label": "Vertical Tab Alignment",
      "description": "Text alignment for vertical tabs",
      "themeable": false,
      "reason": "behavioral",
      "control": "SelectControl",
      "options": ["left", "center", "right"]
    },
    "showIcon": {
      "type": "boolean",
      "default": true,
      "cssVar": "tab-show-icon",
      "group": "icon",
      "label": "Show Icon",
      "description": "Display icons in tab buttons",
      "themeable": true,
      "control": "ToggleControl"
    },
    "iconPosition": {
      "type": "string",
      "default": "right",
      "group": "icon",
      "label": "Icon Position",
      "description": "Position of icon relative to text",
      "themeable": true,
      "control": "SelectControl",
      "options": ["left", "right"]
    },
    "iconColor": {
      "type": "string",
      "default": "#666666",
      "cssVar": "tab-icon-color",
      "group": "icon",
      "label": "Icon Color",
      "description": "Color of the tab icon",
      "themeable": true,
      "control": "ColorPicker"
    },
    "iconSize": {
      "type": "number",
      "default": "16px",
      "cssVar": "tab-icon-size",
      "group": "icon",
      "label": "Icon Size",
      "description": "Size of the icon in pixels",
      "themeable": true,
      "control": "RangeControl",
      "min": 8,
      "max": 48,
      "unit": "px"
    },
    "iconTypeClosed": {
      "type": "string",
      "default": "â–¾",
      "group": "icon",
      "label": "Closed Icon",
      "description": "Icon when tab is closed (char or image URL)",
      "themeable": true,
      "control": "IconPicker"
    },
    "iconTypeOpen": {
      "type": "string",
      "default": "none",
      "group": "icon",
      "label": "Open Icon",
      "description": "Icon when tab is open (none = use closed icon with rotation)",
      "themeable": true,
      "control": "IconPicker"
    },
    "iconRotation": {
      "type": "number",
      "default": "180deg",
      "cssVar": "tab-icon-rotation",
      "group": "icon",
      "label": "Icon Rotation",
      "description": "Rotation angle when open (degrees)",
      "themeable": true,
      "control": "RangeControl",
      "min": -360,
      "max": 360,
      "unit": "deg"
    },
    "tabButtonColor": {
      "type": "string",
      "default": "#666666",
      "cssVar": "tab-button-color",
      "group": "titleColors",
      "label": "Tab Button Color",
      "description": "Text color for inactive tab buttons",
      "themeable": true,
      "control": "ColorPicker"
    },
    "tabButtonBackgroundColor": {
      "type": "string",
      "default": "transparent",
      "cssVar": "tab-button-bg",
      "group": "titleColors",
      "label": "Tab Button Background",
      "description": "Background color for inactive tab buttons",
      "themeable": true,
      "control": "ColorPicker"
    },
    "tabButtonHoverColor": {
      "type": "string",
      "default": "#333333",
      "cssVar": "tab-button-hover-color",
      "group": "titleColors",
      "label": "Tab Button Hover Color",
      "description": "Text color when hovering over tab",
      "themeable": true,
      "control": "ColorPicker"
    },
    "tabButtonHoverBackgroundColor": {
      "type": "string",
      "default": "#e8e8e8",
      "cssVar": "tab-button-hover-bg",
      "group": "titleColors",
      "label": "Tab Button Hover Background",
      "description": "Background color when hovering over tab",
      "themeable": true,
      "control": "ColorPicker"
    },
    "tabButtonActiveColor": {
      "type": "string",
      "default": "#000000",
      "cssVar": "tab-button-active-color",
      "group": "titleColors",
      "label": "Tab Button Active Color",
      "description": "Text color for active/selected tab",
      "themeable": true,
      "control": "ColorPicker"
    },
    "tabButtonActiveBackgroundColor": {
      "type": "string",
      "default": "#ffffff",
      "cssVar": "tab-button-active-bg",
      "group": "titleColors",
      "label": "Tab Button Active Background",
      "description": "Background color for active/selected tab",
      "themeable": true,
      "control": "ColorPicker"
    },
    "tabButtonActiveBorderColor": {
      "type": "string",
      "default": "#dddddd",
      "cssVar": "tab-button-active-border-color",
      "group": "titleColors",
      "label": "Tab Button Active Border Color",
      "description": "Border color for the active tab",
      "themeable": true,
      "control": "ColorPicker"
    },
    "tabButtonActiveBorderBottomColor": {
      "type": "string",
      "default": "transparent",
      "cssVar": "tab-button-active-border-bottom-color",
      "group": "titleColors",
      "label": "Tab Button Active Border Bottom",
      "description": "Bottom border color for active tab (creates connected effect)",
      "themeable": true,
      "control": "ColorPicker"
    },
    "buttonBorderColor": {
      "type": "string",
      "default": null,
      "cssVar": "tabs-button-border-color",
      "group": "buttonBorders",
      "label": "Border Color",
      "description": "Border color for inactive tab buttons",
      "themeable": true,
      "control": "ColorPicker"
    },
    "buttonBorderWidth": {
      "type": "number",
      "default": null,
      "cssVar": "tabs-button-border-width",
      "group": "buttonBorders",
      "label": "Border Width",
      "description": "Border width for tab buttons",
      "themeable": true,
      "control": "RangeControl",
      "min": 0,
      "max": 10,
      "unit": "px"
    },
    "buttonBorderStyle": {
      "type": "string",
      "default": null,
      "cssVar": "tabs-button-border-style",
      "group": "buttonBorders",
      "label": "Border Style",
      "description": "Border style for tab buttons",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        { "label": "None", "value": "none" },
        { "label": "Solid", "value": "solid" },
        { "label": "Dashed", "value": "dashed" },
        { "label": "Dotted", "value": "dotted" },
        { "label": "Double", "value": "double" }
      ]
    },
    "buttonBorderRadius": {
      "type": "object",
      "default": {
        "topLeft": 4,
        "topRight": 4,
        "bottomRight": 0,
        "bottomLeft": 0
      },
      "cssVar": "tabs-button-border-radius",
      "group": "buttonBorders",
      "label": "Border Radius",
      "description": "Corner radius for tab buttons",
      "themeable": true,
      "control": "BorderRadiusControl",
      "unit": "px"
    },
    "buttonShadow": {
      "type": "string",
      "default": "none",
      "cssVar": "tabs-button-border-shadow",
      "group": "buttonBorders",
      "label": "Shadow",
      "description": "Box shadow for tab buttons",
      "themeable": true,
      "control": "TextControl"
    },
    "buttonShadowHover": {
      "type": "string",
      "default": "none",
      "cssVar": "tabs-button-border-shadow-hover",
      "group": "buttonBorders",
      "label": "Shadow Hover",
      "description": "Box shadow for tab buttons on hover",
      "themeable": true,
      "control": "TextControl"
    },
    "tabButtonFontSize": {
      "type": "number",
      "default": 16,
      "cssVar": "tab-button-font-size",
      "group": "titleTypography",
      "label": "Tab Button Font Size",
      "description": "Font size for tab buttons",
      "themeable": true,
      "control": "RangeControl",
      "min": 10,
      "max": 36,
      "unit": "px"
    },
    "tabButtonFontWeight": {
      "type": "string",
      "default": "500",
      "cssVar": "tab-button-font-weight",
      "group": "titleTypography",
      "label": "Tab Button Font Weight",
      "description": "Font weight for tab buttons",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        { "label": "100", "value": "100" },
        { "label": "200", "value": "200" },
        { "label": "300", "value": "300" },
        { "label": "400", "value": "400" },
        { "label": "500", "value": "500" },
        { "label": "600", "value": "600" },
        { "label": "700", "value": "700" },
        { "label": "800", "value": "800" },
        { "label": "900", "value": "900" },
        { "label": "Normal", "value": "normal" },
        { "label": "Bold", "value": "bold" }
      ]
    },
    "tabButtonFontStyle": {
      "type": "string",
      "default": "normal",
      "cssVar": "tab-button-font-style",
      "group": "titleTypography",
      "label": "Tab Button Font Style",
      "description": "Font style for tab buttons",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        { "label": "Normal", "value": "normal" },
        { "label": "Italic", "value": "italic" },
        { "label": "Oblique", "value": "oblique" }
      ]
    },
    "tabButtonTextTransform": {
      "type": "string",
      "default": "none",
      "cssVar": "tab-button-text-transform",
      "group": "titleTypography",
      "label": "Tab Button Text Transform",
      "description": "Text transformation for tab buttons",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        { "label": "None", "value": "none" },
        { "label": "Uppercase", "value": "uppercase" },
        { "label": "Lowercase", "value": "lowercase" },
        { "label": "Capitalize", "value": "capitalize" }
      ]
    },
    "tabButtonTextDecoration": {
      "type": "string",
      "default": "none",
      "cssVar": "tab-button-text-decoration",
      "group": "titleTypography",
      "label": "Tab Button Text Decoration",
      "description": "Text decoration for tab buttons",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        { "label": "None", "value": "none" },
        { "label": "Underline", "value": "underline" },
        { "label": "Overline", "value": "overline" },
        { "label": "Line Through", "value": "line-through" }
      ]
    },
    "tabButtonTextAlign": {
      "type": "string",
      "default": "center",
      "cssVar": "tab-button-text-align",
      "group": "titleTypography",
      "label": "Tab Button Text Alignment",
      "description": "Text alignment for tab buttons",
      "themeable": true,
      "control": "SelectControl",
      "options": ["left", "center", "right"]
    },
    "tabListBackgroundColor": {
      "type": "string",
      "default": "#f5f5f5",
      "cssVar": "tab-list-bg",
      "group": "titleColors",
      "label": "Tab List Background",
      "description": "Background color for the tab navigation bar",
      "themeable": true,
      "control": "ColorPicker"
    },
    "tabListAlignment": {
      "type": "string",
      "default": "left",
      "cssVar": "tab-list-align",
      "group": "titleTypography",
      "label": "Tab List Alignment",
      "description": "Horizontal alignment of tabs",
      "themeable": true,
      "control": "SelectControl",
      "options": ["left", "center", "right"]
    },
    "panelColor": {
      "type": "string",
      "default": "#333333",
      "cssVar": "tab-panel-color",
      "group": "titleColors",
      "label": "Panel Text Color",
      "description": "Text color for tab panel content",
      "themeable": true,
      "control": "ColorPicker"
    },
    "panelBackgroundColor": {
      "type": "string",
      "default": "#ffffff",
      "cssVar": "tab-panel-bg",
      "group": "titleColors",
      "label": "Panel Background",
      "description": "Background color for tab panels",
      "themeable": true,
      "control": "ColorPicker"
    },
    "dividerColor": {
      "type": "string",
      "default": null,
      "cssVar": "tabs-divider-color",
      "group": "dividerLine",
      "label": "Divider Color",
      "description": "Color of divider line between tabs and panel",
      "themeable": true,
      "control": "ColorPicker"
    },
    "dividerWidth": {
      "type": "number",
      "default": null,
      "cssVar": "tabs-divider-width",
      "group": "dividerLine",
      "label": "Divider Width",
      "description": "Width/thickness of divider line",
      "themeable": true,
      "control": "RangeControl",
      "min": 0,
      "max": 10,
      "unit": "px"
    },
    "dividerStyle": {
      "type": "string",
      "default": null,
      "cssVar": "tabs-divider-style",
      "group": "dividerLine",
      "label": "Divider Style",
      "description": "Style of divider line between tabs and panel",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        { "label": "None", "value": "none" },
        { "label": "Solid", "value": "solid" },
        { "label": "Dashed", "value": "dashed" },
        { "label": "Dotted", "value": "dotted" },
        { "label": "Double", "value": "double" }
      ]
    },
    "borderColor": {
      "type": "string",
      "default": null,
      "cssVar": "tabs-border-color",
      "group": "borders",
      "label": "Border Color",
      "description": "Border color for main tabs wrapper",
      "themeable": true,
      "control": "ColorPicker"
    },
    "borderWidth": {
      "type": "number",
      "default": null,
      "cssVar": "tabs-border-width",
      "group": "borders",
      "label": "Border Width",
      "description": "Border width for main wrapper",
      "themeable": true,
      "control": "RangeControl",
      "min": 0,
      "max": 10,
      "unit": "px"
    },
    "borderStyle": {
      "type": "string",
      "default": null,
      "cssVar": "tabs-border-style",
      "group": "borders",
      "label": "Border Style",
      "description": "Border style for wrapper",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        { "label": "None", "value": "none" },
        { "label": "Solid", "value": "solid" },
        { "label": "Dashed", "value": "dashed" },
        { "label": "Dotted", "value": "dotted" },
        { "label": "Double", "value": "double" }
      ]
    },
    "borderRadius": {
      "type": "object",
      "default": {
        "topLeft": 0,
        "topRight": 0,
        "bottomRight": 0,
        "bottomLeft": 0
      },
      "cssVar": "tabs-border-radius",
      "group": "borders",
      "label": "Border Radius",
      "description": "Corner radius for main wrapper",
      "themeable": true,
      "control": "BorderRadiusControl",
      "unit": "px"
    },
    "shadow": {
      "type": "string",
      "default": "none",
      "cssVar": "tabs-border-shadow",
      "group": "borders",
      "label": "Shadow",
      "description": "Box shadow for main wrapper",
      "themeable": true,
      "control": "TextControl"
    },
    "shadowHover": {
      "type": "string",
      "default": "none",
      "cssVar": "tabs-border-shadow-hover",
      "group": "borders",
      "label": "Shadow Hover",
      "description": "Box shadow for wrapper on hover",
      "themeable": true,
      "control": "TextControl"
    }
  }
}
