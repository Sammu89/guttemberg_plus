{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tabs Block Theme Configuration",
  "version": "1.0.0",
  "description": "Complete theme and appearance configuration for Tabs blocks",
  "blockType": "tabs",
  "blockName": "Tabs",
  "groups": {
    "headerColors": {
      "title": "Header Colors",
      "description": "Tab button text and background colors including hover and active states"
    },
    "contentColors": {
      "title": "Content Colors",
      "description": "Panel/content area text and background colors"
    },
    "border": {
      "title": "Border",
      "description": "Main border styles, widths, radius, and shadow for tabs, panels, and containers"
    },
    "border-divider": {
      "title": "Border Divider",
      "description": "Divider border between tabs and panel"
    },
    "typography": {
      "title": "Typography",
      "description": "Font settings for tab buttons and panel content"
    },
    "icon": {
      "title": "Icon",
      "description": "Icon appearance settings"
    },
    "layout": {
      "title": "Layout",
      "description": "Spacing, padding, sizing, and alignment"
    },
    "behavior": {
      "title": "Behavior",
      "description": "Non-themeable behavioral and structural settings"
    }
  },
  "attributes": {
    "uniqueId": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Unique ID",
      "description": "Auto-generated unique block identifier",
      "themeable": false,
      "reason": "structural"
    },
    "blockId": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Block ID",
      "description": "Block-specific identification",
      "themeable": false,
      "reason": "structural"
    },
    "currentTheme": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Current Theme",
      "description": "Currently active theme name (empty = Default)",
      "themeable": false,
      "reason": "structural"
    },
    "tabs": {
      "type": "array",
      "default": [
        {
          "id": "",
          "title": "Tab 1",
          "content": "",
          "isDisabled": false
        },
        {
          "id": "",
          "title": "Tab 2",
          "content": "",
          "isDisabled": false
        }
      ],
      "group": "behavior",
      "label": "Tabs",
      "description": "Array of tab items with title, content, and state",
      "themeable": false,
      "reason": "content"
    },
    "orientation": {
      "type": "string",
      "default": "horizontal",
      "group": "behavior",
      "label": "Orientation",
      "description": "Tab layout orientation",
      "themeable": false,
      "reason": "behavioral",
      "options": [
        "horizontal",
        "vertical"
      ]
    },
    "activationMode": {
      "type": "string",
      "default": "auto",
      "group": "behavior",
      "label": "Activation Mode",
      "description": "How tabs are activated (auto = focus, manual = click)",
      "themeable": false,
      "reason": "behavioral",
      "options": [
        "auto",
        "manual"
      ]
    },
    "currentTab": {
      "type": "number",
      "default": 0,
      "group": "behavior",
      "label": "Current Tab",
      "description": "Index of currently active tab (0-based)",
      "themeable": false,
      "reason": "behavioral"
    },
    "responsiveBreakpoint": {
      "type": "number",
      "default": 768,
      "group": "behavior",
      "label": "Responsive Breakpoint",
      "description": "Width in pixels below which to show accordion fallback",
      "themeable": false,
      "reason": "behavioral"
    },
    "enableResponsiveFallback": {
      "type": "boolean",
      "default": true,
      "group": "behavior",
      "label": "Enable Responsive Fallback",
      "description": "Convert to accordion on small screens",
      "themeable": false,
      "reason": "behavioral"
    },
    "headingLevel": {
      "type": "string",
      "default": "none",
      "group": "typography",
      "label": "Heading Level",
      "description": "Semantic HTML heading level (none, h1-h6)",
      "themeable": false,
      "reason": "behavioral",
      "control": "SelectControl",
      "options": [
        "none",
        "h1",
        "h2",
        "h3",
        "h4",
        "h5",
        "h6"
      ]
    },
    "useHeadingStyles": {
      "type": "boolean",
      "default": false,
      "group": "behavior",
      "label": "Use Heading Styles",
      "description": "Apply default heading styles",
      "themeable": false,
      "reason": "behavioral"
    },
    "initiallyOpen": {
      "type": "boolean",
      "default": false,
      "group": "behavior",
      "label": "Initially Open",
      "description": "Whether first tab is open on load",
      "themeable": false,
      "reason": "behavioral"
    },
    "title": {
      "type": "string",
      "default": "Accordion Title",
      "group": "behavior",
      "label": "Title",
      "description": "Block title (for accessibility)",
      "themeable": false,
      "reason": "content"
