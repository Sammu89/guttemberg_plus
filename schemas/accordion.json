{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Accordion Block Theme Configuration",
  "version": "1.0.0",
  "description": "Complete theme and appearance configuration for Accordion blocks",
  "blockType": "accordion",
  "blockName": "Accordion",
  "groups": {
    "colors": {
      "title": "Colors",
      "description": "Text and background colors for title, content, and states"
    },
    "typography": {
      "title": "Typography",
      "description": "Font settings for title and content"
    },
    "borders": {
      "title": "Borders",
      "description": "Border styles, widths, radius, and shadow"
    },
    "layout": {
      "title": "Layout",
      "description": "Spacing, padding, and sizing"
    },
    "icons": {
      "title": "Icons",
      "description": "Icon appearance and behavior"
    },
    "behavior": {
      "title": "Behavior",
      "description": "Non-themeable behavioral and structural settings"
    }
  },
  "attributes": {
    "accordionId": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Accordion ID",
      "description": "Unique identifier for the accordion block",
      "themeable": false,
      "reason": "structural"
    },
    "uniqueId": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Unique ID",
      "description": "Auto-generated unique block identifier",
      "themeable": false,
      "reason": "structural"
    },
    "blockId": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Block ID",
      "description": "Block-specific identification",
      "themeable": false,
      "reason": "structural"
    },
    "title": {
      "type": "string",
      "default": "Accordion Title",
      "group": "behavior",
      "label": "Title",
      "description": "The accordion title text",
      "themeable": false,
      "reason": "content"
    },
    "content": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Content",
      "description": "The accordion content (rich text)",
      "themeable": false,
      "reason": "content"
    },
    "currentTheme": {
      "type": "string",
      "default": "",
      "group": "behavior",
      "label": "Current Theme",
      "description": "Currently active theme name (empty = Default)",
      "themeable": false,
      "reason": "structural"
    },
    "customizations": {
      "type": "object",
      "default": {},
      "group": "behavior",
      "label": "Customizations",
      "description": "Stores deltas from expected values (theme + defaults) for inline CSS output",
      "themeable": false,
      "reason": "structural"
    },
    "customizationCache": {
      "type": "object",
      "default": {},
      "group": "behavior",
      "label": "Customization Cache",
      "description": "Complete snapshot for safety/restoration (deprecated - for backward compatibility)",
      "themeable": false,
      "reason": "structural"
    },
    "initiallyOpen": {
      "type": "boolean",
      "default": false,
      "group": "behavior",
      "label": "Initially Open",
      "description": "Whether accordion is open on page load",
      "themeable": false,
      "reason": "behavioral"
    },
    "allowMultipleOpen": {
      "type": "boolean",
      "default": false,
      "group": "behavior",
      "label": "Allow Multiple Open",
      "description": "Allow multiple accordions to be open simultaneously",
      "themeable": false,
      "reason": "behavioral"
    },
    "accordionWidth": {
      "type": "string",
      "default": "100%",
      "group": "behavior",
      "label": "Width",
      "description": "Accordion container width",
      "themeable": false,
      "reason": "behavioral"
    },
    "accordionHorizontalAlign": {
      "type": "string",
      "default": "left",
      "group": "behavior",
      "label": "Horizontal Alignment",
      "description": "Horizontal alignment of the accordion",
      "themeable": false,
      "reason": "behavioral"
    },
    "headingLevel": {
      "type": "string",
      "default": "none",
      "group": "behavior",
      "label": "Heading Level",
      "description": "Semantic HTML heading level (none, h1-h6)",
      "themeable": false,
      "reason": "behavioral",
      "options": [
        "none",
        "h1",
        "h2",
        "h3",
        "h4",
        "h5",
        "h6"
      ]
    },
    "useHeadingStyles": {
      "type": "boolean",
      "default": false,
      "group": "behavior",
      "label": "Use Heading Styles",
      "description": "Apply default heading styles to title",
      "themeable": false,
      "reason": "behavioral"
    },
    "titleColor": {
      "type": "string",
      "default": "#333333",
      "cssVar": "accordion-title-color",
      "group": "colors",
      "label": "Title Color",
      "description": "Text color for the accordion title",
      "themeable": true,
      "control": "ColorPicker"
    },
    "titleBackgroundColor": {
      "type": "string",
      "default": "#f5f5f5",
      "cssVar": "accordion-title-bg",
      "group": "colors",
