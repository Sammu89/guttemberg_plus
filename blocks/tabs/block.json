{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "custom/tabs",
	"version": "1.0.0",
	"title": "Tabs",
	"category": "design",
	"icon": "table-col-before",
	"description": "Create a tabbed content interface with horizontal/vertical orientation and customizable themes.",
	"keywords": ["tabs", "tabbed", "navigation", "panel", "switcher"],
	"textdomain": "guttemberg-plus",
	"editorScript": "file:../../build/blocks/tabs/index.js",
	"viewScript": "file:../../build/blocks/tabs/frontend.js",
	"supports": {
		"html": false,
		"align": ["wide", "full"],
		"anchor": true,
		"className": true,
		"customClassName": true
	},
	"_comment": "NOTE: These attributes are intentionally overridden in index.js with tabsAttributes (52+ attributes from shared cascade system). This minimal set serves as documentation of core structural attributes.",
	"attributes": {
		"tabsId": {
			"type": "string"
		},
		"tabs": {
			"type": "array"
		},
		"currentTab": {
			"type": "number",
			"default": 0
		},
		"orientation": {
			"type": "string"
		},
		"activationMode": {
			"type": "string"
		},
		"enableResponsiveFallback": {
			"type": "boolean",
			"default": true
		},
		"responsiveBreakpoint": {
			"type": "number",
			"default": 768
		},
		"currentTheme": {
			"type": "string",
			"default": ""
		},
		"customizations": {
			"type": "object"
		},
		"customizationCache": {
			"type": "object"
		},
		"titleColor": {
			"type": "string"
		},
		"titleBackgroundColor": {
			"type": "string"
		},
		"contentColor": {
			"type": "string"
		},
		"contentBackgroundColor": {
			"type": "string"
		},
		"borderColor": {
			"type": "string"
		},
		"borderThickness": {
			"type": "number"
		},
		"borderStyle": {
			"type": "string"
		},
		"borderRadius": {
			"type": "object"
		},
		"titlePadding": {
			"type": "object"
		},
		"contentPadding": {
			"type": "object"
		},
		"titleFontSize": {
			"type": "number"
		},
		"titleFontWeight": {
			"type": "string"
		},
		"activeTitleColor": {
			"type": "string"
		},
		"activeTitleBackgroundColor": {
			"type": "string"
		},
		"hoverTitleColor": {
			"type": "string"
		},
		"hoverTitleBackgroundColor": {
			"type": "string"
		}
	},
	"providesContext": {
		"custom/tabs/activeTab": "currentTab"
	},
	"usesContext": []
}
