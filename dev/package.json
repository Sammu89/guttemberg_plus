{
  "name": "guttemberg-plus",
  "version": "1.0.0",
  "description": "Advanced Gutenberg blocks: Accordion, Tabs, and Table of Contents with powerful theming system",
  "author": "Your Name",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "wordpress",
    "gutenberg",
    "blocks",
    "accordion",
    "tabs",
    "table-of-contents"
  ],
  "homepage": "https://github.com/yourusername/guttemberg-plus",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/guttemberg-plus.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/guttemberg-plus/issues"
  },
  "scripts": {
    "validate": "node build-tools/validate/run.js",
    "validate:schema": "node build-tools/validate/run.js --group schema",
    "validate:code": "node build-tools/validate/run.js --group code",
    "validate:css": "node build-tools/validate/run.js --group css",
    "validate:behavior": "node build-tools/validate/run.js --group behavior",
    "schema:validate": "node build-tools/schema-validator.js",
    "schema:validate-structure": "node build-tools/validate-schema-structure.js",
    "schema:validate-responsive-css": "node build-tools/validate-responsive-css-attrs.js",
    "schema:build": "npm run schema:validate-structure && npm run schema:validate-responsive-css && node build-tools/schema-compiler.js",
    "schema:build:warn": "node build-tools/validate/run.js --only schema-structure --warn-only && node build-tools/validate/run.js --only responsive-schema --warn-only && node build-tools/schema-compiler.js --warn-only",
    "validate:controls": "node build-tools/validate-controls.js && node build-tools/validate-control-values.js",
    "validate:theme-json": "node build-tools/validate-theme-json-values.js",
    "validate:theme-css": "node build-tools/validate-theme-css-vars.js",
    "validate:schema-usage": "node build-tools/validate-schema-usage.js",
    "validate:mismatches": "node build-tools/validate-mismatches.js",
    "validate:destructuring": "node build-tools/validate-attribute-destructuring.js",
    "validate:css-vars": "node build-tools/validate-css-var-usage.js",
    "validate:editor-css-vars": "node build-tools/validate-editor-css-vars.js",
    "validate:editor-frontend": "node build-tools/validate-editor-frontend-sync.js",
    "validate:toggles": "node build-tools/validate-toggles.js",
    "validate:structure-markup": "node build-tools/validate-structure-markup.js",
    "validate:control-structures": "node build-tools/validate-control-data-structures.js",
    "validate:all": "npm run validate",
    "prebuild": "npm run schema:build:warn && npm run validate:schema -- --warn-only && npm run validate:code -- --warn-only",
    "build": "wp-scripts build",
    "postbuild": "node build-tools/rename-css-files.js && npm run validate:css -- --warn-only && npm run validate:behavior -- --warn-only && node build-tools/prompt-dist.js",
    "dist": "DIST_YES=1 npm run build",
    "dist:win": "set DIST_YES=1&& npm run build",
    "prestart": "npm run schema:build",
    "start": "wp-scripts start",
    "lint:js": "wp-scripts lint-js",
    "lint:css": "wp-scripts lint-style",
    "format": "wp-scripts format",
    "packages-update": "wp-scripts packages-update",
    "plugin-zip": "wp-scripts plugin-zip"
  },
  "devDependencies": {
    "@wordpress/icons": "^11.4.0",
    "@wordpress/scripts": "^27.0.0",
    "jsdom": "^27.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "lucide-react": "^0.562.0"
  }
}
