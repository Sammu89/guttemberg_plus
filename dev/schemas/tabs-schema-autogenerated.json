{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tabs Block Theme Configuration",
  "version": "2.0.0",
  "description": "Complete theme and appearance configuration for Tabs blocks",
  "blockType": "tabs",
  "blockName": "Tabs",
  "tabs": [
    {
      "name": "settings",
      "order": 1,
      "groups": [
        {
          "title": "Block Options",
          "description": "Block-level options",
          "order": 1,
          "initialOpen": true,
          "id": "blockOptions",
          "subgroups": []
        },
        {
          "title": "Block Borders",
          "description": "Wrapper borders and shadows",
          "order": 2,
          "initialOpen": false,
          "id": "blockBorders",
          "subgroups": [],
          "tab": "appearance"
        },
        {
          "title": "Header Colors",
          "description": "Tab header text/background colors",
          "order": 3,
          "initialOpen": false,
          "id": "headerColors",
          "subgroups": [],
          "tab": "appearance"
        },
        {
          "title": "Header Typography",
          "description": "Tab header typography",
          "order": 4,
          "initialOpen": false,
          "id": "headerTypography",
          "subgroups": [],
          "tab": "appearance"
        },
        {
          "title": "Header Borders",
          "description": "Tab header borders and active edge",
          "order": 5,
          "initialOpen": false,
          "id": "headerBorders",
          "subgroups": []
        },
        {
          "title": "Header Row Options",
          "description": "Row background, spacing, alignment, dividers",
          "order": 6,
          "initialOpen": false,
          "id": "headerRowOptions",
          "subgroups": []
        },
        {
          "title": "Panel Appearance",
          "description": "Panel background and borders",
          "order": 7,
          "initialOpen": false,
          "id": "panelAppearance",
          "subgroups": []
        },
        {
          "title": "Icon",
          "description": "Icon appearance and behavior",
          "order": 8,
          "initialOpen": false,
          "id": "icon",
          "subgroups": []
        }
      ]
    },
    {
      "name": "appearance",
      "order": 2,
      "groups": []
    }
  ],
  "attributes": {
    "tabsWidth": {
      "type": "string",
      "default": "100%",
      "label": "Block Width",
      "description": "Tabs container width",
      "group": "blockOptions",
      "order": 1,
      "control": "SliderWithInput",
      "appliesTo": "wrapper",
      "cssVar": "tabs-width",
      "cssProperty": "width",
      "responsive": true,
      "themeable": false
    },
    "headingLevel": {
      "type": "string",
      "default": "none",
      "label": "Heading Level",
      "description": "Semantic HTML heading level (none, h1-h6)",
      "group": "blockOptions",
      "order": 2,
      "control": "SelectControl",
      "options": [
        "none",
        "h1",
        "h2",
        "h3",
        "h4",
        "h5",
        "h6"
      ],
      "themeable": false,
      "outputsCSS": false
    },
    "tabsHorizontalAlign": {
      "type": "string",
      "default": "center",
      "label": "Block Horizontal Alignment",
      "description": "Horizontal alignment of the tabs block",
      "group": "blockOptions",
      "order": 3,
      "control": "SelectControl",
      "options": [
        "left",
        "center",
        "right"
      ],
      "themeable": false
    },
    "orientation": {
      "type": "string",
      "default": "horizontal",
      "label": "Tab Orientation",
      "description": "Tab layout orientation",
      "group": "blockOptions",
      "order": 4,
      "control": "SelectControl",
      "options": [
        {
          "label": "Horizontal",
          "value": "horizontal"
        },
        {
          "label": "Vertical Left",
          "value": "vertical-left"
        },
        {
          "label": "Vertical Right",
          "value": "vertical-right"
        }
      ],
      "themeable": false,
      "outputsCSS": false
    },
    "activationMode": {
      "type": "string",
      "default": "click",
      "label": "Activation Mode",
      "description": "How tabs are activated (click or hover)",
      "group": "blockOptions",
      "order": 5,
      "control": "SelectControl",
      "options": [
        {
          "label": "Click",
          "value": "click"
        },
        {
          "label": "Hover",
          "value": "hover"
        }
      ],
      "themeable": false,
      "reason": "generalal"
    },
    "title": {
      "type": "string",
      "default": "Tabs",
      "label": "Title",
      "description": "Block title (for accessibility)",
      "group": "blockOptions",
      "order": 6,
      "themeable": false,
      "outputsCSS": false
    },
    "tabs": {
      "type": "array",
      "default": [
        {
          "id": "",
          "title": "Tab 1",
          "content": "",
          "isDisabled": false
        },
        {
          "id": "",
          "title": "Tab 2",
          "content": "",
          "isDisabled": false
        }
      ],
      "label": "Tabs",
      "description": "Array of tab items with title, content, and state",
      "group": "blockOptions",
      "order": 7,
      "themeable": false,
      "outputsCSS": false
    },
    "tabsData": {
      "type": "array",
      "default": [],
      "label": "Tabs Data",
      "description": "Synchronized tab button data for server-side rendering",
      "group": "blockOptions",
      "order": 8,
      "themeable": false,
      "outputsCSS": false
    },
    "currentTheme": {
      "type": "string",
      "default": "",
      "label": "Theme",
      "description": "Currently active theme name (empty = Default)",
      "group": "blockOptions",
      "order": 9,
      "themeable": false,
      "outputsCSS": false
    },
    "uniqueId": {
      "type": "string",
      "default": "",
      "label": "Unique ID",
      "description": "Auto-generated unique block identifier",
      "group": "blockOptions",
      "order": 10,
      "themeable": false,
      "outputsCSS": false
    },
    "blockId": {
      "type": "string",
      "default": "",
      "label": "Block ID",
      "description": "Block-specific identification",
      "group": "blockOptions",
      "order": 11,
      "themeable": false,
      "outputsCSS": false
    },
    "borderColor": {
      "type": "object",
      "default": {
        "top": "#dddddd",
        "right": "#dddddd",
        "bottom": "#dddddd",
        "left": "#dddddd"
      },
      "label": "Block Border Color",
      "description": "Border color for main tabs wrapper",
      "group": "blockBorders",
      "order": 1,
      "control": "ColorPicker",
      "appliesTo": "wrapper",
      "cssVar": "tabs-border-color",
      "cssProperty": "border-color",
      "themeable": true
    },
    "borderWidth": {
      "type": "number",
      "default": 0,
      "label": "Block Border Width",
      "description": "Border width for main wrapper",
      "group": "blockBorders",
      "order": 2,
      "control": "RangeControl",
      "appliesTo": "wrapper",
      "cssVar": "tabs-border-width",
      "cssProperty": "border-width",
      "themeable": true
    },
    "borderStyle": {
      "type": "object",
      "default": {
        "top": "solid",
        "right": "solid",
        "bottom": "solid",
        "left": "solid"
      },
      "label": "Block Border Style",
      "description": "Border style for wrapper",
      "group": "blockBorders",
      "order": 3,
      "control": "SelectControl",
      "options": [
        {
          "label": "None",
          "value": "none"
        },
        {
          "label": "Solid",
          "value": "solid"
        },
        {
          "label": "Dashed",
          "value": "dashed"
        },
        {
          "label": "Dotted",
          "value": "dotted"
        },
        {
          "label": "Double",
          "value": "double"
        }
      ],
      "appliesTo": "wrapper",
      "cssVar": "tabs-border-style",
      "cssProperty": "border-style",
      "themeable": true
    },
    "borderRadius": {
      "type": "object",
      "default": {
        "topLeft": 0,
        "topRight": 0,
        "bottomRight": 0,
        "bottomLeft": 0
      },
      "label": "Block Border Radius",
      "description": "Corner radius for main wrapper",
      "group": "blockBorders",
      "order": 4,
      "control": "BorderRadiusControl",
      "appliesTo": "wrapper",
      "cssVar": "tabs-border-radius",
      "cssProperty": "border-radius",
      "themeable": true,
      "unit": "px"
    },
    "shadow": {
      "type": "string",
      "default": "none",
      "label": "Block Shadow",
      "description": "Box shadow for main wrapper",
      "group": "blockBorders",
      "order": 5,
      "control": "TextControl",
      "appliesTo": "wrapper",
      "cssVar": "tabs-border-shadow",
      "cssProperty": "box-shadow",
      "themeable": true
    },
    "shadowHover": {
      "type": "string",
      "default": "none",
      "label": "Block Hover Shadow",
      "description": "Box shadow for wrapper on hover",
      "group": "blockBorders",
      "order": 6,
      "control": "TextControl",
      "state": "hover",
      "appliesTo": "wrapper",
      "cssVar": "tabs-border-shadow-hover",
      "cssProperty": "box-shadow",
      "themeable": true
    },
    "tabButtonColor": {
      "type": "color-panel",
      "group": "headerColors",
      "appliesTo": "tabButton",
      "states": [
        "base",
        "hover",
        "active"
      ],
      "fields": [
        "text",
        "background"
      ],
      "cssVar": "tabs-button",
      "needsMapping": true,
      "default": {
        "text": "#666666",
        "background": "#f5f5f5",
        "hover": {
          "text": "#333333",
          "background": "#e8e8e8"
        },
        "active": {
          "text": "#333333",
          "background": "#ffffff"
        }
      }
    },
    "tabButtonFontSize": {
      "type": "number",
      "default": "1rem",
