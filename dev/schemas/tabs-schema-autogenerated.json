      "group": "headerTypography",
      "order": 7,
      "control": "RangeControl",
      "appliesTo": "tabButton",
      "cssVar": "tabs-button-padding",
      "cssProperty": "padding",
      "themeable": true,
      "transformValue": "paddingRectangle"
