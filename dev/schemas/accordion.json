{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Accordion Block Theme Configuration Schema (minified)",
  "version": "1.0.0",
  "description": "Complete theme and appearance configuration for Accordion blocks",
  "blockType": "accordion",
  "blockName": "Accordion",
  "tabs": [
    {
      "name": "appearance",
      "order": 1,
      "groups": [
        {
          "title": "Borders",
          "description": "Block borders, radius, shadows, and divider settings",
          "order": 2,
          "initialOpen": false,
          "subgroups": [
            {
              "name": "External",
              "order": 1
            },
            {
              "name": "Divider",
              "order": 2
            }
          ],
          "id": "borders"
        },
        {
          "title": "Layout",
          "description": "Spacing and padding settings",
          "order": 3,
          "initialOpen": false,
          "subgroups": [],
          "id": "layout"
        },
        {
          "title": "Colors",
          "description": "Header and panel color settings",
          "order": 4,
          "initialOpen": false,
          "subgroups": [
            {
              "name": "Header",
              "order": 1
            },
            {
              "name": "Header - Hover",
              "order": 2
            },
            {
              "name": "Panel",
              "order": 3
            }
          ],
          "id": "colors"
        },
        {
          "title": "Typography",
          "description": "Font settings for header and content",
          "order": 5,
          "initialOpen": false,
          "subgroups": [
            {
              "name": "Header",
              "order": 1
            },
            {
              "name": "Content",
              "order": 2
            }
          ],
          "id": "typography"
        },
        {
          "title": "Icon",
          "description": "Icon appearance and behavior",
          "order": 6,
          "initialOpen": false,
          "subgroups": [],
          "id": "icon"
        },
        {
          "title": "Animation",
          "description": "Open/close animation settings",
          "order": 7,
          "initialOpen": false,
          "subgroups": [],
          "id": "animation"
        }
      ]
    },
    {
      "name": "settings",
      "order": 2,
      "groups": [
        {
          "title": "Block Options",
          "description": "Structural and layout options for the accordion block",
          "order": 1,
          "initialOpen": true,
          "subgroups": [],
          "id": "blockOptions"
        }
      ]
    }
  ],
  "attributes": {
    "dividerBorder": {
      "type": "border-panel",
      "appliesTo": "content",
      "subgroup": "Divider",
      "fields": [
        "top"
      ],
      "default": {
        "width": {
          "top": 0,
          "unit": "px"
        },
        "color": {
          "top": "#dddddd"
        },
        "style": {
          "top": "solid"
        }
      }
    },
    "blockBox": {
      "type": "box-panel",
      "appliesTo": "item",
      "borderSubgroup": "External",
      "fields": [
        "border",
        "radius",
        "shadow",
        "margin"
      ],
      "default": {
        "border": {
          "width": {
            "top": 1,
            "right": 1,
            "bottom": 1,
            "left": 1,
            "unit": "px"
          },
          "color": {
            "top": "#dddddd",
            "right": "#dddddd",
            "bottom": "#dddddd",
            "left": "#dddddd"
          },
          "style": {
            "top": "solid",
            "right": "solid",
            "bottom": "solid",
            "left": "solid"
          }
        },
        "radius": {
          "topLeft": 4,
          "topRight": 4,
          "bottomRight": 4,
          "bottomLeft": 4,
          "unit": "px"
        },
        "shadow": [
          {
            "x": {
              "value": 0,
              "unit": "px"
            },
            "y": {
              "value": 8,
              "unit": "px"
            },
            "blur": {
              "value": 24,
              "unit": "px"
            },
            "spread": {
              "value": 0,
              "unit": "px"
            },
            "color": "rgba(0,0,0,0.15)",
            "inset": false
          }
        ],
        "margin": {
          "top": 1,
          "right": 0,
          "bottom": 1,
          "left": 0,
          "unit": "em"
        }
      }
    },
    "headerBox": {
      "type": "box-panel",
      "appliesTo": "title",
      "fields": [
        "padding"
      ],
      "default": {
        "padding": {
          "top": 12,
          "right": 16,
          "bottom": 12,
          "left": 16,
          "unit": "px"
        }
      }
    },
    "contentBox": {
      "type": "box-panel",
      "appliesTo": "content",
      "fields": [
        "padding"
      ],
      "default": {
        "padding": {
          "top": 16,
          "right": 16,
          "bottom": 16,
          "left": 16,
          "unit": "px"
        }
      }
    },
    "titleColor": {
      "type": "color-panel",
      "appliesTo": "title",
      "subgroup": "Header",
      "states": [
        "base",
        "hover"
      ],
      "default": {
        "text": "#333333",
        "background": "#f5f5f5",
        "hover": {
          "text": "#000000",
          "background": "#e8e8e8"
        }
      }
    },
    "contentColor": {
      "type": "color-panel",
      "appliesTo": "content",
      "subgroup": "Panel",
      "default": {
        "text": "#333333",
        "background": "#ffffff"
      }
    },
    "contentTypography": {
      "type": "typography-panel",
      "subgroup": "Content",
      "cssVar": "accordion-content",
      "appliesTo": "contentInner",
      "fields": [
        "fontFamily",
        "fontSize",
        "lineHeight"
      ]
    },
    "titleTypography": {
      "type": "typography-panel",
      "subgroup": "Header",
      "cssVar": "accordion-title",
      "appliesTo": "titleText",
      "fields": [
        "fontFamily",
        "fontSize",
        "lineHeight"
      ],
      "states": [
        "base",
        "hover"
      ]
    },
    "titleIcon": {
      "type": "icon-panel",
      "cssVar": "accordion-icon",
      "appliesTo": "icon"
    },
    "animationType": {
      "type": "string",
      "default": "slide",
      "label": "Animation",
      "description": "How the accordion opens and closes",
      "group": "animation",
      "order": 1,
      "control": "SelectControl",
      "options": [
        {
          "label": "Slide",
          "value": "slide"
        },
        {
          "label": "Slide + Fade",
          "value": "slideFade"
        },
        {
          "label": "None",
          "value": "none"
        }
      ],
      "themeable": true,
      "outputsCSS": false
    },
    "animationDuration": {
      "type": "string",
      "default": "250ms",
      "label": "Duration",
      "description": "Animation duration in milliseconds",
      "group": "animation",
      "order": 2,
      "control": "SliderWithInput",
      "min": 0,
      "max": 2000,
      "step": 50,
      "appliesTo": "item",
      "cssVar": "accordion-animation-duration",
      "cssProperty": "transition-duration",
      "themeable": true
    },
    "accordionWidth": {
      "type": "string",
      "default": "100%",
      "label": "Block Width",
      "description": "Accordion container width",
      "group": "blockOptions",
      "order": 1,
      "control": "SliderWithInput",
      "appliesTo": "item",
      "cssVar": "accordion-width",
      "cssProperty": "width",
      "responsive": true,
      "themeable": false
    },
    "headingLevel": {
      "type": "string",
      "default": "none",
      "label": "Heading Level",
      "description": "Semantic HTML heading level for accessibility",
      "group": "blockOptions",
      "order": 2,
      "control": "HeadingLevel",
      "themeable": false,
      "outputsCSS": false
    },
    "accordionHorizontalAlign": {
      "type": "string",
      "default": "center",
      "label": "Block Alignment",
      "description": "Horizontal alignment of the accordion",
      "group": "blockOptions",
      "order": 3,
      "control": "AlignmentControl",
      "alignmentType": "block",
      "themeable": false
    },
    "initiallyOpen": {
      "type": "boolean",
      "default": false,
      "label": "Open by Default",
      "description": "Whether accordion is open on page load",
      "group": "blockOptions",
      "order": 4,
      "control": "ToggleControl",
      "themeable": false
    },
    "accordionId": {
      "type": "string",
      "default": "",
      "label": "Accordion ID",
      "description": "Unique identifier for the accordion block",
      "group": "blockOptions",
      "order": 5,
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false
    },
    "blockId": {
      "type": "string",
      "default": "",
      "label": "Block ID",
      "description": "Block-specific identification",
      "group": "blockOptions",
      "order": 6,
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false
    },
    "content": {
      "type": "string",
      "default": "",
      "label": "Content",
      "description": "The accordion content (rich text)",
      "group": "blockOptions",
      "order": 7,
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false
    },
    "currentTheme": {
      "type": "string",
      "default": "",
      "label": "Theme",
      "description": "Currently active theme name (empty = Default)",
      "group": "blockOptions",
      "order": 8,
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false
    },
    "customizations": {
      "type": "object",
      "default": {},
      "label": "Customizations",
      "description": "Block-specific customizations (Tier 3 CSS)",
      "group": "blockOptions",
      "order": 9,
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false
    },
    "title": {
      "type": "string",
      "default": "Accordion Title",
      "label": "Title",
      "description": "The accordion title text",
      "group": "blockOptions",
      "order": 10,
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false
    },
    "uniqueId": {
      "type": "string",
      "default": "",
      "label": "Unique ID",
      "description": "Auto-generated unique block identifier",
      "group": "blockOptions",
      "order": 11,
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false
    }
  },
  "groups": {
    "borders": {
      "title": "Borders",
      "description": "Block borders, radius, shadows, and divider settings",
      "order": 2,
      "initialOpen": false,
      "tab": "appearance",
      "subgroups": [
        {
          "name": "External",
          "order": 1
        },
        {
          "name": "Divider",
          "order": 2
        }
      ]
    },
    "layout": {
      "title": "Layout",
      "description": "Spacing and padding settings",
      "order": 3,
      "initialOpen": false,
      "tab": "appearance",
      "subgroups": []
    },
    "colors": {
      "title": "Colors",
      "description": "Header and panel color settings",
      "order": 4,
      "initialOpen": false,
      "tab": "appearance",
      "subgroups": [
        {
          "name": "Header",
          "order": 1
        },
        {
          "name": "Header - Hover",
          "order": 2
        },
        {
          "name": "Panel",
          "order": 3
        }
      ]
    },
    "typography": {
      "title": "Typography",
      "description": "Font settings for header and content",
      "order": 5,
      "initialOpen": false,
      "tab": "appearance",
      "subgroups": [
        {
          "name": "Header",
          "order": 1
        },
        {
          "name": "Content",
          "order": 2
        }
      ]
    },
    "icon": {
      "title": "Icon",
      "description": "Icon appearance and behavior",
      "order": 6,
      "initialOpen": false,
      "tab": "appearance",
      "subgroups": []
    },
    "animation": {
      "title": "Animation",
      "description": "Open/close animation settings",
      "order": 7,
      "initialOpen": false,
      "tab": "appearance",
      "subgroups": []
    },
    "blockOptions": {
      "title": "Block Options",
      "description": "Structural and layout options for the accordion block",
      "order": 1,
      "initialOpen": true,
      "tab": "settings",
      "subgroups": []
    }
  }
}
