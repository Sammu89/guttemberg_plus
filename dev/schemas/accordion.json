{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Accordion Block Theme Configuration",
  "version": "2.0.0",
  "description": "Complete theme and appearance configuration for Accordion blocks",
  "blockType": "accordion",
  "blockName": "Accordion",
  "manualSyncRequired": {
    "description": "CSS properties are auto-generated from cssVar/cssSelector/cssProperty fields",
    "files": [
      "blocks/accordion/src/_theme-generated.scss (AUTO-GENERATED - do not edit)"
    ],
    "instructions": "CSS variable declarations are automatically generated. Only edit style.scss for structural/layout CSS."
  },
  "groups": {
    "blockOptions": {
      "title": "Block Options",
      "description": "Structural and layout options for the accordion block",
      "order": 1,
      "initialOpen": true,
      "tab": "settings"
    },
    "borders": {
      "title": "Borders",
      "description": "Block borders, radius, shadows, and divider settings",
      "order": 2,
      "initialOpen": false,
      "tab": "appearance",
      "subgroups": ["External", "Divider"]
    },
    "colors": {
      "title": "Colors",
      "description": "Header and panel color settings",
      "order": 3,
      "initialOpen": false,
      "tab": "appearance",
      "subgroups": ["Header", "Panel"]
    },
    "typography": {
      "title": "Typography",
      "description": "Font settings for header and content",
      "order": 4,
      "initialOpen": false,
      "tab": "appearance",
      "subgroups": ["Header", "Content"]
    },
    "icon": {
      "title": "Icon",
      "description": "Icon appearance and behavior",
      "order": 5,
      "initialOpen": false,
      "tab": "appearance"
    },
    "animation": {
      "title": "Animation",
      "description": "Open/close animation settings",
      "order": 6,
      "initialOpen": false,
      "tab": "appearance"
    }
  },
  "attributes": {
    "accordionId": {
      "type": "string",
      "default": "",
      "group": "blockOptions",
      "label": "Accordion ID",
      "description": "Unique identifier for the accordion block",
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false,
      "order": 99
    },
    "uniqueId": {
      "type": "string",
      "default": "",
      "group": "blockOptions",
      "label": "Unique ID",
      "description": "Auto-generated unique block identifier",
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false,
      "order": 99
    },
    "blockId": {
      "type": "string",
      "default": "",
      "group": "blockOptions",
      "label": "Block ID",
      "description": "Block-specific identification",
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false,
      "order": 99
    },
    "title": {
      "type": "string",
      "default": "Accordion Title",
      "group": "blockOptions",
      "label": "Title",
      "description": "The accordion title text",
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false,
      "order": 99
    },
    "content": {
      "type": "string",
      "default": "",
      "group": "blockOptions",
      "label": "Content",
      "description": "The accordion content (rich text)",
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false,
      "order": 99
    },
    "currentTheme": {
      "type": "string",
      "default": "",
      "group": "blockOptions",
      "label": "Theme",
      "description": "Currently active theme name (empty = Default)",
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false,
      "order": 99
    },
    "customizations": {
      "type": "object",
      "default": {},
      "group": "blockOptions",
      "label": "Customizations",
      "description": "Block-specific customizations (Tier 3 CSS)",
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false,
      "order": 99
    },
    "accordionWidth": {
      "type": "string",
      "default": "100%",
      "group": "blockOptions",
      "label": "Block Width",
      "description": "Accordion container width (e.g., 100%, 500px)",
      "themeable": false,
      "control": "TextControl",
      "order": 1
    },
    "headingLevel": {
      "type": "string",
      "default": "none",
      "group": "blockOptions",
      "label": "Heading Level",
      "description": "Semantic HTML heading level for accessibility",
      "themeable": false,
      "outputsCSS": false,
      "control": "HeadingLevel",
      "order": 2
    },
    "accordionHorizontalAlign": {
      "type": "string",
      "default": "center",
      "group": "blockOptions",
      "label": "Block Alignment",
      "description": "Horizontal alignment of the accordion",
      "themeable": false,
      "control": "AlignmentControl",
      "alignmentType": "block",
      "order": 3
    },
    "initiallyOpen": {
      "type": "boolean",
      "default": false,
      "group": "blockOptions",
      "label": "Open by Default",
      "description": "Whether accordion is open on page load",
      "themeable": false,
      "control": "ToggleControl",
      "order": 4
    },

    "borderWidth": {
      "type": "object",
      "default": {
        "top": 1,
        "right": 1,
        "bottom": 1,
        "left": 1,
        "unit": "px"
      },
      "cssVar": "accordion-border-width",
      "group": "borders",
      "subgroup": "External",
      "label": "Border",
      "description": "Border width, color, and style for all sides",
      "themeable": true,
      "control": "BorderPanel",
      "min": 0,
      "max": 20,
      "order": 1,
      "appliesTo": "item",
      "cssProperty": "border-width",
      "outputsCSS": true
    },
    "borderColor": {
      "type": "object",
      "default": {
        "top": "#dddddd",
        "right": "#dddddd",
        "bottom": "#dddddd",
        "left": "#dddddd",
        "linked": true
      },
      "cssVar": "accordion-border-color",
      "group": "borders",
      "subgroup": "External",
      "label": "Border Color",
      "description": "Border color for all sides",
      "themeable": true,
      "control": "BorderPanel",
      "renderControl": false,
      "order": 2,
      "appliesTo": "item",
      "cssProperty": "border-color",
      "outputsCSS": true
    },
    "borderStyle": {
      "type": "object",
      "default": {
        "top": "solid",
        "right": "solid",
        "bottom": "solid",
        "left": "solid",
        "linked": true
      },
      "cssVar": "accordion-border-style",
      "group": "borders",
      "subgroup": "External",
      "label": "Border Style",
      "description": "Border style for all sides",
      "themeable": true,
      "control": "BorderPanel",
      "renderControl": false,
      "order": 3,
      "appliesTo": "item",
      "cssProperty": "border-style",
      "outputsCSS": true
    },
    "borderRadius": {
      "type": "object",
      "default": {
        "topLeft": 4,
        "topRight": 4,
        "bottomRight": 4,
        "bottomLeft": 4,
        "unit": "px"
      },
      "cssVar": "accordion-border-radius",
      "group": "borders",
      "subgroup": "External",
      "label": "Border Radius",
      "description": "Corner radius of the accordion wrapper",
      "themeable": true,
      "control": "CompactBorderRadius",
      "units": ["px", "rem", "%"],
      "min": 0,
      "max": 100,
      "order": 2,
      "appliesTo": "item",
      "cssProperty": "border-radius"
    },
    "headerPadding": {
      "type": "object",
      "default": { "top": 12, "right": 16, "bottom": 12, "left": 16, "unit": "px" },
      "cssVar": "accordion-header-padding",
      "group": "borders",
      "subgroup": "External",
      "label": "Header Padding",
      "description": "Inner spacing of the header",
      "themeable": true,
      "control": "CompactPadding",
      "responsive": true,
      "units": ["px", "rem", "em"],
      "min": 0,
      "max": 100,
      "order": 3,
      "appliesTo": "title",
      "cssProperty": "padding"
    },
    "contentPadding": {
      "type": "object",
      "default": { "top": 16, "right": 16, "bottom": 16, "left": 16, "unit": "px" },
      "cssVar": "accordion-content-padding",
      "group": "borders",
      "subgroup": "External",
      "label": "Content Padding",
      "description": "Inner spacing of the content panel",
      "themeable": true,
      "control": "CompactPadding",
      "responsive": true,
      "units": ["px", "rem", "em"],
      "min": 0,
      "max": 100,
      "order": 4,
      "appliesTo": "content",
      "cssProperty": "padding"
    },
    "blockMargin": {
      "type": "object",
      "default": { "top": 1, "right": 0, "bottom": 1, "left": 0, "unit": "em" },
      "cssVar": "accordion-block-margin",
      "group": "borders",
      "subgroup": "External",
      "label": "Block Margin",
      "description": "Outer spacing around the accordion",
      "themeable": true,
      "control": "CompactMargin",
      "responsive": true,
      "units": ["px", "rem", "em"],
      "min": 0,
      "max": 100,
      "order": 5,
      "appliesTo": "item",
      "cssProperty": "margin"
    },
    "shadow": {
      "type": "string",
      "default": "none",
      "cssVar": "accordion-shadow",
      "group": "borders",
      "subgroup": "External",
      "label": "Block Shadow",
      "description": "Shadow effect for the accordion",
      "themeable": true,
      "control": "ShadowControl",
      "order": 6,
      "appliesTo": "item",
      "cssProperty": "box-shadow"
    },

    "dividerColor": {
      "type": "string",
      "default": "#dddddd",
      "cssVar": "accordion-divider-color",
      "group": "borders",
      "subgroup": "Divider",
      "label": "Divider Color",
      "description": "Color of divider between header and content",
      "themeable": true,
      "control": "ColorControl",
      "order": 1,
      "appliesTo": "content",
      "cssProperty": "border-top-color"
    },
    "dividerStyle": {
      "type": "string",
      "default": "solid",
      "cssVar": "accordion-divider-style",
      "group": "borders",
      "subgroup": "Divider",
      "label": "Divider Style",
      "description": "Style of divider between header and content",
      "themeable": true,
      "control": "BorderStyleControl",
      "order": 2,
      "appliesTo": "content",
      "cssProperty": "border-top-style"
    },
    "dividerWidth": {
      "type": "number",
      "default": 0,
      "cssVar": "accordion-divider-width",
      "group": "borders",
      "subgroup": "Divider",
      "label": "Divider Width",
      "description": "Thickness of divider between header and content",
      "themeable": true,
      "control": "SliderWithInput",
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "px",
      "order": 3,
      "appliesTo": "content",
      "cssProperty": "border-top-width"
    },

    "titleColor": {
      "type": "string",
      "default": "#333333",
      "cssVar": "accordion-title-color",
      "group": "colors",
      "subgroup": "Header",
      "label": "Text Color",
      "description": "Text color for the accordion header",
      "themeable": true,
      "control": "ColorControl",
      "order": 1,
      "appliesTo": "title",
      "cssProperty": "color"
    },
    "titleBackgroundColor": {
      "type": "string",
      "default": "#f5f5f5",
      "cssVar": "accordion-title-bg",
      "group": "colors",
      "subgroup": "Header",
      "label": "Background",
      "description": "Background color for the accordion header",
      "themeable": true,
      "control": "GradientControl",
      "order": 2,
      "appliesTo": "title",
      "cssProperty": "background"
    },
    "hoverTitleColor": {
      "type": "string",
      "default": "#000000",
      "cssVar": "accordion-title-hover-color",
      "state": "hover",
      "group": "colors",
      "subgroup": "Header",
      "label": "Hover Text Color",
      "description": "Text color when hovering over header",
      "themeable": true,
      "control": "ColorControl",
      "order": 3,
      "appliesTo": "title",
      "cssProperty": "color"
    },
    "hoverTitleBackgroundColor": {
      "type": "string",
      "default": "#e8e8e8",
      "cssVar": "accordion-title-hover-bg",
      "state": "hover",
      "group": "colors",
      "subgroup": "Header",
      "label": "Hover Background",
      "description": "Background color when hovering over header",
      "themeable": true,
      "control": "GradientControl",
      "order": 4,
      "appliesTo": "title",
      "cssProperty": "background"
    },
    "activeTitleColor": {
      "type": "string",
      "default": "#000000",
      "cssVar": "accordion-title-active-color",
      "state": "active",
      "group": "colors",
      "subgroup": "Header",
      "label": "Active Text Color",
      "description": "Text color when accordion is open",
      "themeable": true,
      "control": "ColorControl",
      "order": 5,
      "appliesTo": "title",
      "cssProperty": "color"
    },
    "activeTitleBackgroundColor": {
      "type": "string",
      "default": "#e8e8e8",
      "cssVar": "accordion-title-active-bg",
      "state": "active",
      "group": "colors",
      "subgroup": "Header",
      "label": "Active Background",
      "description": "Background color when accordion is open",
      "themeable": true,
      "control": "GradientControl",
      "order": 6,
      "appliesTo": "title",
      "cssProperty": "background"
    },

    "contentTextColor": {
      "type": "string",
      "default": "#333333",
      "cssVar": "accordion-content-color",
      "group": "colors",
      "subgroup": "Panel",
      "label": "Text Color",
      "description": "Text color for accordion content",
      "themeable": true,
      "control": "ColorControl",
      "order": 1,
      "appliesTo": "content",
      "cssProperty": "color"
    },
    "contentBackgroundColor": {
      "type": "string",
      "default": "#ffffff",
      "cssVar": "accordion-content-bg",
      "group": "colors",
      "subgroup": "Panel",
      "label": "Background",
      "description": "Background color for accordion content",
      "themeable": true,
      "control": "GradientControl",
      "order": 2,
      "appliesTo": "content",
      "cssProperty": "background"
    },

    "titleFontFamily": {
      "type": "string",
      "default": "inherit",
      "cssVar": "accordion-title-font-family",
      "group": "typography",
      "subgroup": "Header",
      "label": "Font Family",
      "description": "Font family for the header",
      "themeable": true,
      "control": "FontFamilyControl",
      "order": 1,
      "appliesTo": "title",
      "cssProperty": "font-family"
    },
    "titleFontSize": {
      "type": "number",
      "default": 1.125,
      "cssVar": "accordion-title-font-size",
      "group": "typography",
      "subgroup": "Header",
      "label": "Font Size",
      "description": "Font size for the header",
      "themeable": true,
      "responsive": true,
      "control": "SliderWithInput",
      "min": 0.5,
      "max": 4,
      "step": 0.025,
      "units": ["rem", "em", "px"],
      "order": 2,
      "appliesTo": "title",
      "cssProperty": "font-size"
    },
    "titleAppearance": {
      "type": "object",
      "default": {
        "weight": "600",
        "style": "normal"
      },
      "group": "typography",
      "subgroup": "Header",
      "label": "Appearance",
      "description": "Font weight and style for the header",
      "themeable": true,
      "control": "AppearanceControl",
      "outputsCSS": false,
      "order": 3,
      "appliesTo": "title"
    },
    "titleLetterSpacing": {
      "type": "number",
      "default": 0,
      "cssVar": "accordion-title-letter-spacing",
      "group": "typography",
      "subgroup": "Header",
      "label": "Letter Spacing",
      "description": "Space between letters",
      "themeable": true,
      "responsive": true,
      "control": "SliderWithInput",
      "min": -2,
      "max": 10,
      "step": 0.1,
      "units": ["px", "em"],
      "order": 4,
      "appliesTo": "title",
      "cssProperty": "letter-spacing"
    },
    "titleTextDecoration": {
      "type": "string",
      "default": "none",
      "cssVar": "accordion-title-text-decoration",
      "group": "typography",
      "subgroup": "Header",
      "label": "Decoration",
      "description": "Text decoration for the header",
      "themeable": true,
      "control": "DecorationControl",
      "order": 5,
      "appliesTo": "title",
      "cssProperty": "text-decoration"
    },
    "titleTextTransform": {
      "type": "string",
      "default": "none",
      "cssVar": "accordion-title-text-transform",
      "group": "typography",
      "subgroup": "Header",
      "label": "Letter Case",
      "description": "Text transformation for the header",
      "themeable": true,
      "control": "LetterCaseControl",
      "order": 6,
      "appliesTo": "title",
      "cssProperty": "text-transform"
    },
    "titleLineHeight": {
      "type": "number",
      "default": 1.4,
      "cssVar": "accordion-title-line-height",
      "group": "typography",
      "subgroup": "Header",
      "label": "Line Height",
      "description": "Line height for the header",
      "themeable": true,
      "responsive": true,
      "control": "SliderWithInput",
      "min": 0.8,
      "max": 3,
      "step": 0.05,
      "units": ["", "px", "em"],
      "order": 7,
      "appliesTo": "title",
      "cssProperty": "line-height"
    },
    "titleAlignment": {
      "type": "string",
      "default": "left",
      "cssVar": "accordion-title-alignment",
      "group": "typography",
      "subgroup": "Header",
      "label": "Text Alignment",
      "description": "Text alignment for the header",
      "themeable": true,
      "control": "AlignmentControl",
      "alignmentType": "text",
      "order": 8,
      "appliesTo": "title",
      "cssProperty": "text-align"
    },

    "contentFontFamily": {
      "type": "string",
      "default": "inherit",
      "cssVar": "accordion-content-font-family",
      "group": "typography",
      "subgroup": "Content",
      "label": "Font Family",
      "description": "Font family for the content",
      "themeable": true,
      "control": "FontFamilyControl",
      "order": 1,
      "appliesTo": "content",
      "cssProperty": "font-family"
    },
    "contentFontSize": {
      "type": "number",
      "default": 1,
      "cssVar": "accordion-content-font-size",
      "group": "typography",
      "subgroup": "Content",
      "label": "Font Size",
      "description": "Font size for the content",
      "themeable": true,
      "responsive": true,
      "control": "SliderWithInput",
      "min": 0.5,
      "max": 3,
      "step": 0.025,
      "units": ["rem", "em", "px"],
      "order": 2,
      "appliesTo": "content",
      "cssProperty": "font-size"
    },
    "contentLineHeight": {
      "type": "number",
      "default": 1.6,
      "cssVar": "accordion-content-line-height",
      "group": "typography",
      "subgroup": "Content",
      "label": "Line Height",
      "description": "Line height for the content",
      "themeable": true,
      "responsive": true,
      "control": "SliderWithInput",
      "min": 0.8,
      "max": 3,
      "step": 0.05,
      "units": ["", "px", "em"],
      "order": 3,
      "appliesTo": "content",
      "cssProperty": "line-height"
    },

    "showIcon": {
      "type": "boolean",
      "default": true,
      "group": "icon",
      "label": "Show Icon",
      "description": "Display expand/collapse icon",
      "themeable": true,
      "outputsCSS": false,
      "control": "ToggleControl",
      "order": 1
    },
    "iconPosition": {
      "type": "string",
      "default": "right",
      "group": "icon",
      "label": "Icon Position",
      "description": "Position of icon relative to title",
      "themeable": true,
      "outputsCSS": false,
      "control": "IconPositionControl",
      "showWhen": {
        "showIcon": [true]
      },
      "order": 2
    },
    "iconColor": {
      "type": "string",
      "default": "#666666",
      "cssVar": "accordion-icon-color",
      "group": "icon",
      "label": "Icon Color",
      "description": "Color of the expand/collapse icon",
      "themeable": true,
      "control": "ColorControl",
      "showWhen": {
        "showIcon": [true]
      },
      "order": 3,
      "appliesTo": "icon",
      "cssProperty": "color"
    },
    "iconSize": {
      "type": "number",
      "default": 1.25,
      "cssVar": "accordion-icon-size",
      "group": "icon",
      "label": "Icon Size",
      "description": "Size of the icon",
      "themeable": true,
      "responsive": true,
      "control": "SliderWithInput",
      "min": 0.5,
      "max": 4,
      "step": 0.05,
      "units": ["rem", "em", "px"],
      "showWhen": {
        "showIcon": [true]
      },
      "order": 4,
      "appliesTo": "icon",
      "cssProperty": "font-size"
    },
    "iconTypeClosed": {
      "type": "string",
      "default": "â–¾",
      "group": "icon",
      "label": "Closed Icon",
      "description": "Icon when accordion is closed (character, unicode, or image URL)",
      "themeable": true,
      "outputsCSS": false,
      "control": "IconPicker",
      "showWhen": {
        "showIcon": [true]
      },
      "order": 5
    },
    "iconTypeOpen": {
      "type": "string",
      "default": "none",
      "group": "icon",
      "label": "Open Icon",
      "description": "Icon when accordion is open (none = rotate closed icon)",
      "themeable": true,
      "outputsCSS": false,
      "control": "IconPicker",
      "showWhen": {
        "showIcon": [true]
      },
      "order": 6
    },
    "iconRotation": {
      "type": "number",
      "default": 180,
      "cssVar": "accordion-icon-rotation",
      "group": "icon",
      "label": "Icon Rotation",
      "description": "Rotation angle when open (degrees)",
      "themeable": true,
      "control": "SliderWithInput",
      "min": -360,
      "max": 360,
      "step": 5,
      "unit": "deg",
      "showWhen": {
        "showIcon": [true]
      },
      "order": 7,
      "appliesTo": "icon",
      "cssProperty": "transform"
    },

    "animationType": {
      "type": "string",
      "default": "slide",
      "group": "animation",
      "label": "Animation Type",
      "description": "How the accordion opens and closes",
      "themeable": true,
      "control": "SelectControl",
      "outputsCSS": false,
      "options": [
        { "label": "None", "value": "none" },
        { "label": "Slide", "value": "slide" },
        { "label": "Fade", "value": "fade" },
        { "label": "Slide + Fade", "value": "slideFade" }
      ],
      "order": 1
    },
    "animationDuration": {
      "type": "number",
      "default": 300,
      "cssVar": "accordion-animation-duration",
      "group": "animation",
      "label": "Duration",
      "description": "Animation duration in milliseconds",
      "themeable": true,
      "control": "SliderWithInput",
      "min": 0,
      "max": 2000,
      "step": 50,
      "unit": "ms",
      "order": 2,
      "appliesTo": "item",
      "cssProperty": "transition-duration"
    },
    "animationEasing": {
      "type": "string",
      "default": "ease",
