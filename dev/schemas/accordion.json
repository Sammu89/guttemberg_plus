{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Accordion Block Theme Configuration",
  "version": "2.0.0",
  "description": "Complete theme and appearance configuration for Accordion blocks",
  "blockType": "accordion",
  "blockName": "Accordion",
  "_IMPORTANT_README": {
    "title": "⚠️ CENTRALIZED CONFIG SYSTEM - READ BEFORE EDITING",
    "description": "Units, min, max, and step values are centralized. DO NOT hardcode them in this schema!",
    "centralizer": "shared/src/config/css-property-scales.js",
    "rules": [
      "✅ DO: Specify 'cssProperty' - units/min/max/step come from centralizer automatically",
      "❌ DON'T: Add 'units', 'min', 'max', 'step' to SliderWithInput attributes (unless overriding)",
      "✅ DO: Only define 'default' value in schema",
      "✅ DO: Add new CSS properties to centralizer if needed"
    ],
    "examples": {
      "CORRECT": {
        "titleOffsetX": {
          "type": "string",
          "default": "0px",
          "control": "SliderWithInput",
          "cssProperty": "left",
          "comment": "Units/min/max/step inherited from 'left' → 'top' in centralizer"
        }
      },
      "INCORRECT": {
        "titleOffsetX": {
          "type": "string",
          "default": "0px",
          "control": "SliderWithInput",
          "cssProperty": "left",
          "units": ["px", "em", "rem"],
          "min": -100,
          "max": 100,
          "step": 1,
          "comment": "❌ WRONG! These should come from centralizer, not hardcoded here"
        }
      }
    },
    "override_when_needed": "You CAN override centralizer values if this specific attribute needs different ranges, but document why in a comment",
    "centralizer_lookup": {
      "font-size": "Units: [rem, px, %, em] | Range varies per unit",
      "letter-spacing": "Units: [em, px, rem] | Range varies per unit",
      "padding": "Units: [rem, px, %, em, vw, vh] | Range varies per unit",
      "margin": "Units: [rem, px, %, em, vw, vh] | Range: -20rem to 20rem (px: -128 to 128)",
      "top/left/right/bottom": "Units: [px, %, rem, em, vh] | Range: -200px to 200px (or equivalent)",
      "border-width": "Units: [px, rem, em] | Range: 0 to 20px",
      "border-radius": "Units: [px, rem, em, %] | Range: 0 to 100px"
    },
    "see_also": "docs/CONTROL_DATA_STRUCTURES.md for control data format patterns"
  },
  "manualSyncRequired": {
    "description": "CSS properties are auto-generated from cssVar/cssSelector/cssProperty fields",
    "files": [
      "blocks/accordion/src/_theme-generated.scss (AUTO-GENERATED - do not edit)"
    ],
    "instructions": "CSS variable declarations are automatically generated. Only edit style.scss for structural/layout CSS."
  },
