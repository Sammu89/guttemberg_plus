{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Accordion Block Theme Configuration",
  "version": "1.0.0",
  "description": "Complete theme and appearance configuration for Accordion blocks",
  "blockType": "accordion",
  "blockName": "Accordion",
  "manualSyncRequired": {
    "description": "CSS properties are auto-generated from cssVar/cssSelector/cssProperty fields",
    "files": [
      "blocks/accordion/src/_theme-generated.scss (AUTO-GENERATED - do not edit)"
    ],
    "instructions": "CSS variable declarations are automatically generated. Only edit style.scss for structural/layout CSS. To add CSS variables, add cssVar, cssSelector, and cssProperty to schema attributes."
  },
  "groups": {
    "blockOptions": {
      "title": "Block Options",
      "description": "Structural and layout options for the accordion block",
      "order": 1,
      "initialOpen": true
    },
    "blockBorders": {
      "title": "Block Borders",
      "description": "Main accordion wrapper borders, radius, and shadows",
      "order": 2,
      "initialOpen": false
    },
    "headerColors": {
      "title": "Header Colors",
      "description": "Title/header text and background colors including hover and active states",
      "order": 3,
      "initialOpen": false
    },
    "headerTypography": {
      "title": "Header Typography",
      "description": "Font settings for the accordion header",
      "order": 4,
	  "subgroups": { "Header", "Content"],
      "initialOpen": false
    },
    "panelAppearance": {
      "title": "Panel Appearance",
      "description": "Content panel appearance settings",
      "order": 5,
      "initialOpen": false
    },
    "dividerLine": {
      "title": "Divider Line",
      "description": "Divider line between header and content",
      "order": 6,
      "initialOpen": false
    },
    "icon": {
      "title": "Icon",
      "description": "Icon appearance and behavior",
      "order": 7,
      "initialOpen": false
    }
  },
  "attributes": {
    "accordionId": {
      "type": "string",
      "default": "",
      "group": "blockOptions",
      "label": "Accordion ID",
      "description": "Unique identifier for the accordion block",
      "themeable": false,
      "outputsCSS": false,
	  "visibleOnSidebar": false,
      "order": 8
    },
    "uniqueId": {
      "type": "string",
      "default": "",
      "group": "blockOptions",
      "label": "Unique ID",
      "description": "Auto-generated unique block identifier",
      "themeable": false,
      "outputsCSS": false,
	  	  "visibleOnSidebar": false,

      "order": 9
    },
    "blockId": {
      "type": "string",
      "default": "",
      "group": "blockOptions",
      "label": "Block ID",
      "description": "Block-specific identification",
      "themeable": false,
      "outputsCSS": false,
	  	  "visibleOnSidebar": false,

      "order": 10
    },
    "title": {
      "type": "string",
      "default": "Accordion Title",
      "group": "blockOptions",
      "label": "Title",
      "description": "The accordion title text",
      "themeable": false,
      "outputsCSS": false,
	  	  "visibleOnSidebar": false,

      "order": 5
    },
    "content": {
      "type": "string",
      "default": "",
      "group": "blockOptions",
      "label": "Content",
      "description": "The accordion content (rich text)",
      "themeable": false,
      "outputsCSS": false,
	  	  "visibleOnSidebar": false,

      "order": 6
    },
    "currentTheme": {
      "type": "string",
      "default": "",
      "group": "blockOptions",
      "label": "Theme",
      "description": "Currently active theme name (empty = Default)",
      "themeable": false,
      "outputsCSS": false,
	  	  "visibleOnSidebar": false,

      "order": 7
    },
    "initiallyOpen": {
      "type": "boolean",
      "default": false,
      "group": "blockOptions",
      "label": "Open by Default",
      "description": "Whether accordion is open on page load",
      "themeable": false,
      "control": "ToggleControl",
      "order": 4
    },
    "accordionWidth": {
      "type": "string",
      "default": "100%",
      "group": "blockOptions",
      "label": "Block Width",
      "description": "Accordion container width (e.g., 100%, 500px)",
      "themeable": false,
      "control": "TextControl",
      "order": 1
    },
    "accordionHorizontalAlign": {
      "type": "string",
      "default": "center",
      "group": "blockOptions",
      "label": "Block Horizontal Alignment",
      "description": "Horizontal alignment of the accordion",
      "themeable": false,
      "control": "SelectControl",
      "options": [
        "left",
        "center",
        "right"
      ],
      "order": 3
    },
    "headingLevel": {
      "type": "string",
      "default": "none",
      "group": "blockOptions",
      "label": "Heading Level",
      "description": "Semantic HTML heading level (none, h1-h6)",
      "themeable": false,
      "outputsCSS": false,
      "control": "SelectControl",
      "options": [
        "none",
        "h1",
        "h2",
        "h3",
        "h4",
        "h5",
        "h6"
      ],
      "order": 2
    },
    "titleColor": {
      "type": "string",
      "default": "#333333",
      "cssVar": "accordion-title-color",
      "group": "headerColors",
      "label": "Header Text Color",
      "description": "Text color for the accordion title",
      "themeable": true,
      "control": "ColorPicker",
      "order": 1,
      "appliesTo": "title",
      "cssProperty": "color"
    },
    "titleBackgroundColor": {
      "type": "string",
      "default": "#f5f5f5",
      "cssVar": "accordion-title-bg",
      "group": "headerColors",
      "label": "Header Background",
      "description": "Background color for the accordion title",
      "themeable": true,
      "control": "ColorPicker",
      "order": 2,
      "appliesTo": "title",
      "cssProperty": "background-color"
    },
    "hoverTitleColor": {
      "type": "string",
      "default": "#000000",
      "cssVar": "accordion-title-hover-color",
      "state": "hover",
      "group": "headerColors",
      "label": "Header Hover Text Color",
      "description": "Text color when hovering over title",
      "themeable": true,
      "control": "ColorPicker",
      "order": 3,
      "appliesTo": "title",
      "cssProperty": "color"
    },
    "hoverTitleBackgroundColor": {
      "type": "string",
      "default": "#e8e8e8",
      "cssVar": "accordion-title-hover-bg",
      "state": "hover",
      "group": "headerColors",
      "label": "Header Hover Background",
      "description": "Background color when hovering over title",
      "themeable": true,
      "control": "ColorPicker",
      "order": 4,
      "appliesTo": "title",
      "cssProperty": "background-color"
    },
    "contentBackgroundColor": {
      "type": "string",
      "default": "#ffffff",
      "cssVar": "accordion-content-bg",
      "group": "panelAppearance",
      "label": "Panel Background",
      "description": "Background color for accordion content",
      "themeable": true,
      "control": "ColorPicker",
      "order": 1,
      "appliesTo": "content",
      "cssProperty": "background-color"
    },
    "borderColor": {
      "type": "string",
      "default": "#dddddd",
      "cssVar": "accordion-border-color",
      "group": "blockBorders",
      "label": "Block Border Color",
      "description": "Color of the accordion wrapper border",
      "themeable": true,
      "control": "ColorPicker",
      "order": 1,
      "appliesTo": "item",
      "cssProperty": "border-color"
    },
    "dividerColor": {
      "type": "string",
      "default": "#dddddd",
      "cssVar": "accordion-divider-color",
      "group": "dividerLine",
      "label": "Divider Color",
      "description": "Color of divider between title and content",
      "themeable": true,
      "control": "ColorPicker",
      "order": 1,
      "appliesTo": "content",
      "cssProperty": "border-top-color"
    },
    "iconColor": {
      "type": "string",
      "default": "#666666",
      "cssVar": "accordion-icon-color",
      "group": "icon",
      "label": "Icon Color",
      "description": "Color of the expand/collapse icon",
      "themeable": true,
      "control": "ColorPicker",
      "order": 3,
      "appliesTo": "icon",
      "cssProperty": "color"
    },
    "titleFontSize": {
      "type": "number",
      "default": 1.125,
      "cssVar": "accordion-title-font-size",
      "group": "headerTypography",
      "label": "Header Font Size",
      "description": "Font size for the title in rem",
      "themeable": true,
      "control": "RangeControl",
      "min": 0.6,
      "max": 3,
      "step": 0.01,
      "unit": "rem",
      "order": 1,
      "appliesTo": "title",
      "cssProperty": "font-size"
    },
    "titleFontWeight": {
      "type": "string",
      "default": "600",
      "cssVar": "accordion-title-font-weight",
      "group": "headerTypography",
      "label": "Header Font Weight",
      "description": "Font weight for the title",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        {
          "label": "100",
          "value": "100"
        },
        {
          "label": "200",
          "value": "200"
        },
        {
          "label": "300",
          "value": "300"
        },
        {
          "label": "400",
          "value": "400"
        },
        {
          "label": "500",
          "value": "500"
        },
        {
          "label": "600",
          "value": "600"
        },
        {
          "label": "700",
          "value": "700"
        },
        {
          "label": "800",
          "value": "800"
        },
        {
          "label": "900",
          "value": "900"
        },
        {
          "label": "Normal",
          "value": "normal"
        },
        {
          "label": "Bold",
          "value": "bold"
        }
      ],
      "order": 2,
      "appliesTo": "title",
      "cssProperty": "font-weight"
    },
    "titleFontStyle": {
      "type": "string",
      "default": "normal",
      "cssVar": "accordion-title-font-style",
      "group": "headerTypography",
      "label": "Header Font Style",
      "description": "Font style for the title",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        {
          "label": "Normal",
          "value": "normal"
        },
        {
          "label": "Italic",
          "value": "italic"
        },
        {
          "label": "Oblique",
          "value": "oblique"
        }
      ],
      "order": 3,
      "appliesTo": "title",
      "cssProperty": "font-style"
    },
    "titleTextTransform": {
      "type": "string",
      "default": "none",
      "cssVar": "accordion-title-text-transform",
      "group": "headerTypography",
      "label": "Header Text Transform",
      "description": "Text transformation for the title",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        {
          "label": "None",
          "value": "none"
        },
        {
          "label": "Uppercase",
          "value": "uppercase"
        },
        {
          "label": "Lowercase",
          "value": "lowercase"
        },
        {
          "label": "Capitalize",
          "value": "capitalize"
        }
      ],
      "order": 4,
      "appliesTo": "title",
      "cssProperty": "text-transform"
    },
    "titleTextDecoration": {
      "type": "string",
      "default": "none",
      "cssVar": "accordion-title-text-decoration",
      "group": "headerTypography",
      "label": "Header Text Decoration",
      "description": "Text decoration for the title",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        {
          "label": "None",
          "value": "none"
        },
        {
          "label": "Underline",
          "value": "underline"
        },
        {
          "label": "Overline",
          "value": "overline"
        },
        {
          "label": "Line Through",
          "value": "line-through"
        }
      ],
      "order": 5,
      "appliesTo": "title",
      "cssProperty": "text-decoration"
    },
    "titleAlignment": {
      "type": "string",
      "default": "left",
      "cssVar": "accordion-title-alignment",
      "group": "headerTypography",
      "label": "Header Text Alignment",
      "description": "Text alignment for the title",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        "left",
        "center",
        "right"
      ],
      "order": 6,
      "appliesTo": "title",
      "cssProperty": "text-align"
    },
    "borderWidth": {
      "type": "number",
      "default": 1,
      "cssVar": "accordion-border-width",
      "group": "blockBorders",
      "label": "Block Border Width",
      "description": "Thickness of the accordion wrapper border in pixels",
      "themeable": true,
      "control": "RangeControl",
      "min": 0,
      "max": 10,
      "unit": "px",
      "order": 2,
      "appliesTo": "item",
      "cssProperty": "border-width"
    },
    "borderStyle": {
      "type": "string",
      "default": "solid",
      "cssVar": "accordion-border-style",
      "group": "blockBorders",
      "label": "Block Border Style",
      "description": "Style of the accordion wrapper border",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        {
          "label": "None",
          "value": "none"
        },
        {
          "label": "Solid",
          "value": "solid"
        },
        {
          "label": "Dashed",
          "value": "dashed"
        },
        {
          "label": "Dotted",
          "value": "dotted"
        },
        {
          "label": "Double",
          "value": "double"
        }
      ],
      "order": 3,
      "appliesTo": "item",
      "cssProperty": "border-style"
    },
    "borderRadius": {
      "type": "object",
      "default": {
        "topLeft": 4,
        "topRight": 4,
        "bottomRight": 4,
        "bottomLeft": 4
      },
      "cssVar": "accordion-border-radius",
      "group": "blockBorders",
      "label": "Block Border Radius",
      "description": "Corner radius of the accordion wrapper",
      "themeable": true,
      "control": "BorderRadiusControl",
      "unit": "px",
      "order": 4,
      "appliesTo": "item",
      "cssProperty": "border-radius"
    },
    "shadow": {
      "type": "string",
      "default": "none",
      "cssVar": "accordion-border-shadow",
      "group": "blockBorders",
      "label": "Block Shadow",
      "description": "CSS box-shadow for the accordion wrapper",
      "themeable": true,
      "control": "TextControl",
      "order": 5,
      "appliesTo": "item",
      "cssProperty": "box-shadow"
    },
    "shadowHover": {
      "type": "string",
      "default": "none",
      "cssVar": "accordion-border-shadow-hover",
      "state": "hover",
      "group": "blockBorders",
      "label": "Block Hover Shadow",
      "description": "CSS box-shadow for the accordion wrapper on hover",
      "themeable": true,
      "control": "TextControl",
      "order": 6,
      "appliesTo": "item",
      "cssProperty": "box-shadow"
    },
    "dividerWidth": {
      "type": "number",
      "default": 0,
      "cssVar": "accordion-divider-width",
      "group": "dividerLine",
      "label": "Divider Width",
      "description": "Thickness of divider between title and content",
      "themeable": true,
      "control": "RangeControl",
      "min": 0,
      "max": 10,
      "unit": "px",
      "order": 2,
      "appliesTo": "content",
      "cssProperty": "border-top-width"
    },
    "dividerStyle": {
      "type": "string",
      "default": "solid",
      "cssVar": "accordion-divider-style",
      "group": "dividerLine",
      "label": "Divider Style",
      "description": "Style of divider between title and content",
      "themeable": true,
      "control": "SelectControl",
      "options": [
        {
          "label": "None",
          "value": "none"
        },
        {
          "label": "Solid",
          "value": "solid"
        },
        {
          "label": "Dashed",
          "value": "dashed"
        },
        {
          "label": "Dotted",
          "value": "dotted"
        },
        {
          "label": "Double",
          "value": "double"
        }
      ],
      "order": 3,
      "appliesTo": "content",
      "cssProperty": "border-top-style"
    },
    "showIcon": {
      "type": "boolean",
      "default": true,
      "group": "icon",
      "label": "Show Icon",
      "description": "Display expand/collapse icon",
      "themeable": true,
      "outputsCSS": false,
      "control": "ToggleControl",
      "order": 1
    },
    "iconPosition": {
      "type": "string",
      "default": "right",
      "group": "icon",
      "label": "Icon Position",
      "description": "Position of icon relative to title",
      "themeable": true,
      "outputsCSS": false,
      "control": "SelectControl",
      "options": [
        "left",
        "right",
        "extreme-left",
        "extreme-right"
      ],
      "order": 2
    },
    "iconSize": {
      "type": "number",
      "default": 1.25,
      "cssVar": "accordion-icon-size",
      "group": "icon",
      "label": "Icon Size",
      "description": "Size of the icon in rem",
      "themeable": true,
      "control": "RangeControl",
      "min": 0.6,
      "max": 3,
      "step": 0.01,
      "unit": "rem",
      "order": 4,
      "appliesTo": "icon",
      "cssProperty": "font-size"
    },
    "iconTypeClosed": {
      "type": "string",
      "default": "\u25be",
      "group": "icon",
      "label": "Closed Icon",
      "description": "Icon when accordion is closed",
      "themeable": true,
      "outputsCSS": false,
      "control": "IconPicker",
      "order": 5
    },
    "iconTypeOpen": {
      "type": "string",
      "default": "none",
      "group": "icon",
      "label": "Open Icon",
      "description": "Icon when accordion is open (none = use just iconTypeClosed with rotation)",
      "themeable": true,
      "outputsCSS": false,
      "control": "IconPicker",
      "order": 6,
      "pago": "nao"
    },
    "iconRotation": {
      "type": "number",
      "default": 180,
      "cssVar": "accordion-icon-rotation",
      "group": "icon",
      "label": "Icon Rotation",
      "description": "Rotation angle when open (degrees)",
      "themeable": true,
      "control": "RangeControl",
      "min": -360,
      "max": 360,
      "unit": "deg",
      "order": 7,
      "pago": "nao",
      "appliesTo": "icon",
      "cssProperty": "transform"
    }
  }
}
