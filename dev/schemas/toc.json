      "themeable": false,
      "reason": "structural",
      "order": 12
    },
    "numberingStyle": {
      "type": "string",
      "default": "none",
      "group": "blockOptions",
      "label": "Numbering Style",
      "description": "Style of numbering for TOC items",
      "themeable": false,
      "control": "SelectControl",
      "options": [
        "none",
        "decimal",
        "roman",
        "alpha"
