{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Accordion Block Theme Configuration Schema (minified)",
  "version": "1.0.0",
  "description": "Complete theme and appearance configuration for Accordion blocks",
  "blockType": "accordion",
  "blockName": "Accordion",
  "tabs": [
    {
      "name": "appearance",
      "order": 1,
      "groups": [
        {
          "title": "Borders",
          "description": "Block borders, radius, shadows, and divider settings",
          "order": 2,
          "initialOpen": false,
          "subgroups": [
            {
              "name": "External",
              "order": 1
            },
            {
              "name": "Divider",
              "order": 2
            }
          ],
          "id": "borders"
        },
        {
          "title": "Layout",
          "description": "Spacing and padding settings",
          "order": 3,
          "initialOpen": false,
          "subgroups": [],
          "id": "layout"
        },
        {
          "title": "Colors",
          "description": "Header and panel color settings",
          "order": 4,
          "initialOpen": false,
          "subgroups": [
            {
              "name": "Header",
              "order": 1
            },
            {
              "name": "Header - Hover",
              "order": 2
            },
            {
              "name": "Panel",
              "order": 3
            }
          ],
          "id": "colors"
        },
        {
          "title": "Typography",
          "description": "Font settings for header and content",
          "order": 5,
          "initialOpen": false,
          "subgroups": [
            {
              "name": "Header",
              "order": 1
            },
            {
              "name": "Content",
              "order": 2
            }
          ],
          "id": "typography"
        },
        {
          "title": "Icon",
          "description": "Icon appearance and behavior",
          "order": 6,
          "initialOpen": false,
          "subgroups": [],
          "id": "icon"
        },
        {
          "title": "Animation",
          "description": "Open/close animation settings",
          "order": 7,
          "initialOpen": false,
          "subgroups": [],
          "id": "animation"
        }
      ]
    },
    {
      "name": "settings",
      "order": 2,
      "groups": [
        {
          "title": "Block Options",
          "description": "Structural and layout options for the accordion block",
          "order": 1,
          "initialOpen": true,
          "subgroups": [],
          "id": "blockOptions"
        }
      ]
    }
  ],
  "attributes": {
    "dividerBorder": {
      "type": "border-panel",
      "appliesTo": "content",
      "subgroup": "Divider",
      "fields": [
        "top"
      ],
      "default": {
        "width": {
          "top": 0,
          "unit": "px"
        },
        "color": {
          "top": "#dddddd"
        },
        "style": {
          "top": "solid"
        }
      }
    },
    "blockBox": {
      "type": "box-panel",
      "appliesTo": "item",
      "borderSubgroup": "External",
      "fields": [
        "border",
        "radius",
        "shadow",
        "margin"
      ],
      "default": {
        "border": {
          "width": {
            "top": 1,
            "right": 1,
            "bottom": 1,
            "left": 1,
            "unit": "px"
          },
          "color": {
            "top": "#dddddd",
            "right": "#dddddd",
            "bottom": "#dddddd",
            "left": "#dddddd"
          },
          "style": {
            "top": "solid",
            "right": "solid",
            "bottom": "solid",
            "left": "solid"
          }
        },
        "radius": {
          "topLeft": 4,
          "topRight": 4,
          "bottomRight": 4,
          "bottomLeft": 4,
          "unit": "px"
        },
        "shadow": [
          {
            "x": {
              "value": 0,
              "unit": "px"
            },
            "y": {
              "value": 8,
              "unit": "px"
            },
            "blur": {
              "value": 24,
              "unit": "px"
            },
            "spread": {
              "value": 0,
              "unit": "px"
            },
            "color": "rgba(0,0,0,0.15)",
            "inset": false
          }
        ],
        "margin": {
          "top": 1,
          "right": 0,
          "bottom": 1,
          "left": 0,
          "unit": "em"
        }
      }
    },
    "headerBox": {
      "type": "box-panel",
      "appliesTo": "title",
      "fields": [
        "padding"
      ],
      "default": {
        "padding": {
          "top": 12,
          "right": 16,
          "bottom": 12,
          "left": 16,
          "unit": "px"
        }
      }
    },
    "contentBox": {
      "type": "box-panel",
      "appliesTo": "content",
      "fields": [
        "padding"
      ],
      "default": {
        "padding": {
          "top": 16,
          "right": 16,
          "bottom": 16,
          "left": 16,
          "unit": "px"
        }
      }
    },
    "titleColor": {
      "type": "color-panel",
      "appliesTo": "title",
      "subgroup": "Header",
      "states": [
        "base",
        "hover"
      ],
      "default": {
        "text": "#333333",
        "background": "#f5f5f5",
        "hover": {
          "text": "#000000",
          "background": "#e8e8e8"
        }
      }
    },
    "contentColor": {
      "type": "color-panel",
      "appliesTo": "content",
      "subgroup": "Panel",
      "default": {
        "text": "#333333",
        "background": "#ffffff"
      }
    },
    "contentTypography": {
      "type": "typography-panel",
      "subgroup": "Content",
      "cssVar": "accordion-content",
      "appliesTo": "contentInner",
      "fields": [
        "fontFamily",
        "fontSize",
        "lineHeight"
      ]
    },
    "titleTypography": {
      "type": "typography-panel",
      "subgroup": "Header",
      "cssVar": "accordion-title",
      "appliesTo": "titleText",
      "fields": [
        "fontFamily",
        "fontSize",
        "lineHeight"
      ],
      "states": [
        "base",
        "hover"
      ]
    },
    "showIcon": {
      "type": "boolean",
      "default": true,
      "control": "ToggleControl",
      "cssVar": "accordion-icon-display",
      "cssProperty": "display",
      "appliesTo": "icon",
      "themeable": true,
      "responsive": false,
      "outputsCSS": true,
      "group": "icon",
      "order": 0,
      "label": "Show Icon",
      "description": "Display icon in the block",
      "cssValueMap": {
        "true": "inline-grid",
        "false": "none"
      }
    },
    "useDifferentIcons": {
      "type": "boolean",
      "default": false,
      "control": "ToggleControl",
      "themeable": true,
      "responsive": false,
      "outputsCSS": false,
      "group": "icon",
      "order": 0.05,
      "label": "Different Icons for Open/Close",
      "description": "Use different icons for active and inactive states",
      "showWhen": {
        "showIcon": [
          true
        ]
      }
    },
    "iconPosition": {
      "type": "string",
      "default": "right",
      "control": "IconPositionControl",
      "allowedPositions": [
        "left",
        "right",
        "box-left",
        "box-right"
      ],
      "themeable": true,
      "responsive": false,
      "outputsCSS": false,
      "group": "icon",
      "order": 0.1,
      "label": "Icon Position",
      "description": "Position of the icon relative to title",
      "showWhen": {
        "showIcon": [
          true
        ]
      }
    },
    "iconRotation": {
      "type": "string",
      "default": "180deg",
      "control": "SliderWithInput",
      "cssVar": "accordion-icon-rotation",
      "cssProperty": "transform",
      "appliesTo": "icon",
      "themeable": true,
      "responsive": false,
      "outputsCSS": true,
      "group": "icon",
      "order": 0.15,
      "label": "Animation Rotation",
      "description": "Rotation angle applied during open/close transition",
      "min": -180,
      "max": 180,
      "step": 1,
      "unit": "deg",
      "showWhen": {
        "showIcon": [
          true
        ]
      }
    },
    "iconInactiveSource": {
      "type": "object",
      "default": {
        "kind": "char",
        "value": "▾"
      },
      "control": "IconPicker",
      "themeable": true,
      "responsive": false,
      "outputsCSS": false,
      "group": "icon",
      "subgroup": "inactive",
      "order": 0.2,
      "label": "Icon",
      "description": "Icon when closed",
      "showWhen": {
        "showIcon": [
          true
        ]
      }
    },
    "iconInactiveColor": {
      "type": "string",
      "default": "#333333",
      "control": "ColorControl",
      "cssVar": "accordion-icon-color",
      "cssProperty": "color",
      "appliesTo": "icon",
      "themeable": true,
      "responsive": false,
      "outputsCSS": true,
      "group": "icon",
      "subgroup": "inactive",
      "order": 0.21000000000000002,
      "label": "Color",
      "description": "Icon color (for character/library icons)",
      "conditionalRender": "iconInactiveSource.kind !== \"image\"",
      "showWhen": {
        "showIcon": [
          true
        ]
      }
    },
    "iconInactiveRotation": {
      "type": "string",
      "default": "0deg",
      "control": "SliderWithInput",
      "cssVar": "accordion-icon-initial-rotation",
      "cssProperty": "transform",
      "appliesTo": "icon",
      "themeable": true,
      "responsive": true,
      "outputsCSS": true,
      "group": "icon",
      "subgroup": "inactive",
      "order": 0.21500000000000002,
      "label": "Rotation",
      "description": "Initial rotation of inactive icon",
      "min": -180,
      "max": 180,
      "step": 1,
      "unit": "deg",
      "showWhen": {
        "showIcon": [
          true
        ]
      }
    },
    "iconInactiveSize": {
      "type": "string",
      "default": "16px",
      "control": "SliderWithInput",
      "cssVar": "accordion-icon-size",
      "cssProperty": "font-size",
      "appliesTo": "icon",
      "themeable": true,
      "responsive": true,
      "outputsCSS": true,
      "group": "icon",
      "subgroup": "inactive",
      "order": 0.22,
      "label": "Size",
      "description": "Icon size (for character/library icons)",
      "conditionalRender": "iconInactiveSource.kind !== \"image\"",
      "min": 8,
      "max": 64,
      "step": 1,
      "unit": "px",
      "showWhen": {
        "showIcon": [
          true
        ]
      }
    },
    "iconInactiveMaxSize": {
      "type": "string",
      "default": "24px",
      "control": "SliderWithInput",
      "cssVar": "accordion-icon-max-size",
      "cssProperty": "max-width",
      "appliesTo": "icon",
      "themeable": true,
      "responsive": true,
      "outputsCSS": true,
      "group": "icon",
      "subgroup": "inactive",
      "order": 0.23,
      "label": "Max Size",
      "description": "Maximum icon size (for image icons)",
      "conditionalRender": "iconInactiveSource.kind === \"image\"",
      "min": 8,
      "max": 128,
      "step": 1,
      "unit": "px",
      "showWhen": {
        "showIcon": [
          true
        ]
      }
    },
    "iconInactiveOffsetX": {
      "type": "string",
      "default": "0px",
      "control": "SliderWithInput",
      "cssVar": "accordion-icon-offset-x",
      "cssProperty": "left",
      "appliesTo": "icon",
      "themeable": true,
      "responsive": true,
      "outputsCSS": true,
      "group": "icon",
      "subgroup": "inactive",
      "order": 0.24000000000000002,
      "label": "Offset X",
      "description": "Horizontal offset of icon",
      "min": -100,
      "max": 100,
      "step": 1,
      "unit": "px",
      "showWhen": {
        "showIcon": [
          true
        ]
      }
    },
    "iconInactiveOffsetY": {
      "type": "string",
      "default": "0px",
      "control": "SliderWithInput",
      "cssVar": "accordion-icon-offset-y",
      "cssProperty": "top",
      "appliesTo": "icon",
      "themeable": true,
      "responsive": true,
      "outputsCSS": true,
      "group": "icon",
      "subgroup": "inactive",
      "order": 0.25,
      "label": "Offset Y",
      "description": "Vertical offset of icon",
      "min": -100,
      "max": 100,
      "step": 1,
      "unit": "px",
      "showWhen": {
        "showIcon": [
          true
        ]
      }
    },
    "iconActiveSource": {
      "type": "object",
      "default": {
        "kind": "char",
        "value": "▾"
      },
      "control": "IconPicker",
      "themeable": true,
      "responsive": false,
      "outputsCSS": false,
      "group": "icon",
      "subgroup": "active",
      "order": 0.3,
      "label": "Icon (Active)",
      "description": "Icon when open",
      "showWhen": {
        "showIcon": [
          true
        ],
        "useDifferentIcons": [
          true
        ]
      }
    },
    "iconActiveColor": {
      "type": "string",
      "default": "#333333",
      "control": "ColorControl",
      "cssVar": "accordion-icon-active-color",
      "cssProperty": "color",
      "appliesTo": "icon",
      "themeable": true,
      "responsive": false,
      "outputsCSS": true,
      "group": "icon",
      "subgroup": "active",
      "order": 0.31,
      "label": "Color (Active)",
      "description": "Icon color (for character/library icons)",
      "conditionalRender": "iconActiveSource.kind !== \"image\"",
      "showWhen": {
        "showIcon": [
          true
        ],
        "useDifferentIcons": [
          true
        ]
      }
    },
    "iconActiveRotation": {
      "type": "string",
      "default": "0deg",
      "control": "SliderWithInput",
      "cssVar": "accordion-icon-active-initial-rotation",
      "cssProperty": "transform",
      "appliesTo": "icon",
      "themeable": true,
      "responsive": true,
      "outputsCSS": true,
      "group": "icon",
      "subgroup": "active",
      "order": 0.315,
      "label": "Rotation (Active)",
      "description": "Initial rotation of active icon",
      "min": -180,
      "max": 180,
      "step": 1,
      "unit": "deg",
      "showWhen": {
        "showIcon": [
          true
        ],
        "useDifferentIcons": [
          true
        ]
      }
    },
    "iconActiveSize": {
      "type": "string",
      "default": "16px",
      "control": "SliderWithInput",
      "cssVar": "accordion-icon-active-size",
      "cssProperty": "font-size",
      "appliesTo": "icon",
      "themeable": true,
      "responsive": true,
      "outputsCSS": true,
      "group": "icon",
      "subgroup": "active",
      "order": 0.32,
      "label": "Size (Active)",
      "description": "Icon size (for character/library icons)",
      "conditionalRender": "iconActiveSource.kind !== \"image\"",
      "min": 8,
      "max": 64,
      "step": 1,
      "unit": "px",
      "showWhen": {
        "showIcon": [
          true
        ],
        "useDifferentIcons": [
          true
        ]
      }
    },
    "iconActiveMaxSize": {
      "type": "string",
      "default": "24px",
      "control": "SliderWithInput",
      "cssVar": "accordion-icon-active-max-size",
      "cssProperty": "max-width",
      "appliesTo": "icon",
      "themeable": true,
      "responsive": true,
      "outputsCSS": true,
      "group": "icon",
      "subgroup": "active",
      "order": 0.32999999999999996,
      "label": "Max Size (Active)",
      "description": "Maximum icon size (for image icons)",
      "conditionalRender": "iconActiveSource.kind === \"image\"",
      "min": 8,
      "max": 128,
      "step": 1,
      "unit": "px",
      "showWhen": {
        "showIcon": [
          true
        ],
        "useDifferentIcons": [
          true
        ]
      }
    },
    "iconActiveOffsetX": {
      "type": "string",
      "default": "0px",
      "control": "SliderWithInput",
      "cssVar": "accordion-icon-active-offset-x",
      "cssProperty": "left",
      "appliesTo": "icon",
      "themeable": true,
      "responsive": true,
      "outputsCSS": true,
      "group": "icon",
      "subgroup": "active",
      "order": 0.33999999999999997,
      "label": "Offset X (Active)",
      "description": "Horizontal offset of icon",
      "min": -100,
      "max": 100,
      "step": 1,
      "unit": "px",
      "showWhen": {
        "showIcon": [
          true
        ],
        "useDifferentIcons": [
          true
        ]
      }
    },
    "iconActiveOffsetY": {
      "type": "string",
      "default": "0px",
      "control": "SliderWithInput",
      "cssVar": "accordion-icon-active-offset-y",
      "cssProperty": "top",
      "appliesTo": "icon",
      "themeable": true,
      "responsive": true,
      "outputsCSS": true,
      "group": "icon",
      "subgroup": "active",
      "order": 0.35,
      "label": "Offset Y (Active)",
      "description": "Vertical offset of icon",
      "min": -100,
      "max": 100,
      "step": 1,
      "unit": "px",
      "showWhen": {
        "showIcon": [
          true
        ],
        "useDifferentIcons": [
          true
        ]
      }
    },
    "animationType": {
      "type": "string",
      "default": "slide",
      "label": "Animation",
      "description": "How the accordion opens and closes",
      "group": "animation",
      "order": 1,
      "control": "SelectControl",
      "options": [
        {
          "label": "Slide",
          "value": "slide"
        },
        {
          "label": "Slide + Fade",
          "value": "slideFade"
        },
        {
          "label": "None",
          "value": "none"
        }
      ],
      "themeable": true,
      "outputsCSS": false
    },
    "animationDuration": {
      "type": "string",
      "default": "250ms",
      "label": "Duration",
      "description": "Animation duration in milliseconds",
      "group": "animation",
      "order": 2,
      "control": "SliderWithInput",
      "min": 0,
      "max": 2000,
      "step": 50,
      "appliesTo": "item",
      "cssVar": "accordion-animation-duration",
      "cssProperty": "transition-duration",
      "themeable": true
    },
    "accordionWidth": {
      "type": "string",
      "default": "100%",
      "label": "Block Width",
      "description": "Accordion container width",
      "group": "blockOptions",
      "order": 1,
      "control": "SliderWithInput",
      "appliesTo": "item",
      "cssVar": "accordion-width",
      "cssProperty": "width",
      "responsive": true,
      "themeable": false
    },
    "headingLevel": {
      "type": "string",
      "default": "none",
      "label": "Heading Level",
      "description": "Semantic HTML heading level for accessibility",
      "group": "blockOptions",
      "order": 2,
      "control": "HeadingLevel",
      "themeable": false,
      "outputsCSS": false
    },
    "accordionHorizontalAlign": {
      "type": "string",
      "default": "center",
      "label": "Block Alignment",
      "description": "Horizontal alignment of the accordion",
      "group": "blockOptions",
      "order": 3,
      "control": "AlignmentControl",
      "alignmentType": "block",
      "themeable": false
    },
    "initiallyOpen": {
      "type": "boolean",
      "default": false,
      "label": "Open by Default",
      "description": "Whether accordion is open on page load",
      "group": "blockOptions",
      "order": 4,
      "control": "ToggleControl",
      "themeable": false
    },
    "accordionId": {
      "type": "string",
      "default": "",
      "label": "Accordion ID",
      "description": "Unique identifier for the accordion block",
      "group": "blockOptions",
      "order": 5,
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false
    },
    "blockId": {
      "type": "string",
      "default": "",
      "label": "Block ID",
      "description": "Block-specific identification",
      "group": "blockOptions",
      "order": 6,
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false
    },
    "content": {
      "type": "string",
      "default": "",
      "label": "Content",
      "description": "The accordion content (rich text)",
      "group": "blockOptions",
      "order": 7,
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false
    },
    "currentTheme": {
      "type": "string",
      "default": "",
      "label": "Theme",
      "description": "Currently active theme name (empty = Default)",
      "group": "blockOptions",
      "order": 8,
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false
    },
    "customizations": {
      "type": "object",
      "default": {},
      "label": "Customizations",
      "description": "Block-specific customizations (Tier 3 CSS)",
      "group": "blockOptions",
      "order": 9,
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false
    },
    "title": {
      "type": "string",
      "default": "Accordion Title",
      "label": "Title",
      "description": "The accordion title text",
      "group": "blockOptions",
      "order": 10,
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false
    },
    "uniqueId": {
      "type": "string",
      "default": "",
      "label": "Unique ID",
      "description": "Auto-generated unique block identifier",
      "group": "blockOptions",
      "order": 11,
      "themeable": false,
      "outputsCSS": false,
      "visibleOnSidebar": false
    }
  },
  "groups": {
    "borders": {
      "title": "Borders",
      "description": "Block borders, radius, shadows, and divider settings",
      "order": 2,
      "initialOpen": false,
      "tab": "appearance",
      "subgroups": [
        {
          "name": "External",
          "order": 1
        },
        {
          "name": "Divider",
          "order": 2
        }
      ]
    },
    "layout": {
      "title": "Layout",
      "description": "Spacing and padding settings",
      "order": 3,
      "initialOpen": false,
      "tab": "appearance",
      "subgroups": []
    },
    "colors": {
      "title": "Colors",
      "description": "Header and panel color settings",
      "order": 4,
      "initialOpen": false,
      "tab": "appearance",
      "subgroups": [
        {
          "name": "Header",
          "order": 1
        },
        {
          "name": "Header - Hover",
          "order": 2
        },
        {
          "name": "Panel",
          "order": 3
        }
      ]
    },
    "typography": {
      "title": "Typography",
      "description": "Font settings for header and content",
      "order": 5,
      "initialOpen": false,
      "tab": "appearance",
      "subgroups": [
        {
          "name": "Header",
          "order": 1
        },
        {
          "name": "Content",
          "order": 2
        }
      ]
    },
    "icon": {
      "title": "Icon",
      "description": "Icon appearance and behavior",
      "order": 6,
      "initialOpen": false,
      "tab": "appearance",
      "subgroups": []
    },
    "animation": {
      "title": "Animation",
      "description": "Open/close animation settings",
      "order": 7,
      "initialOpen": false,
      "tab": "appearance",
      "subgroups": []
    },
